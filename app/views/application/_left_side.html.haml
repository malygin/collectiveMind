%ul#side-nav.side-nav
  %li.panel#stage_life_tape{class:  @project.stage_style(:life_tape_posts) }

    =link_to "/project/#{@project.id}/life_tape/posts" ,  class: "stage_menu1" do
      %h4.no-margin.text-left
        1.
        =@project.status_title(:life_tape_posts)
    - if request.original_url.include? 'life_tape'
      %ul.nav.nav-tabs.nav-stacked
        -@project.aspects.each do |asp|
          %li{class:"#{'active' if asp == @aspect}"}
            = link_to "/project/#{@project.id}/life_tape/posts?asp=#{asp.id}" do
              %i.fa.fa-minus(style="font-size: 8px;")
              &nbsp;
              =" #{asp.content}"
              -#%b="(#{post.comments.count})"



  %li.panel#stage_discontent
    - if @project.status > 2
      = link_to "/project/#{@project.id}/discontent/posts", class:"stage_menu2" do
        %h4.no-margin.text-left
          2.
          =@project.status_title(:discontent_posts)
      - if request.original_url.include? 'discontent'
        %ul.nav.nav-tabs.nav-stacked
          -@project.proc_aspects.each do |asp|
            %li{class:"#{'active' if asp == @aspect_post}"}
              = link_to "/project/#{@project.id}/discontent/posts?asp=#{asp.id}" do
                %i.fa.fa-minus(style="font-size: 8px;")
                &nbsp;
                =asp.content
                %small="(#{asp.aspect_posts.count})"
                -#%b="(#{post.comments.count})"

    -else
      %a.stage_menu2
        %h4.no-margin(style='color:#444444')
          2.
          =@project.status_title(:discontent_posts)



  %li.panel#stage_concept
    - if  @project.status > 6
      = link_to "/project/#{@project.id}/concept/posts" , class:"stage_menu3" do
        %h4.no-margin.text-left
          3.
          =@project.status_title(:concept_posts)
      - if request.original_url.include? 'concept'
        %ul.nav.nav-tabs.nav-stacked
          -@project.proc_aspects.each do |asp|
            %li{class:"#{'active' if asp == @aspect_post}"}
              = link_to "/project/#{@project.id}/concept/posts?asp=#{asp.id}" do
                %i.fa.fa-minus(style="font-size: 8px;")
                &nbsp;
                =asp.content
                %small="(#{asp.aspect_posts.by_status(4).count})"
    -else
      %a.stage_menu3
        %h4.no-margin(style='color:#444444')
          3.
          =@project.status_title(:concept_posts)


  %li.panel#stage_plan
    - if  @project.status > 8
      = link_to "/project/#{@project.id}/plan/posts" , class:"stage_menu4" do
        %h4.no-margin
          4.
          =@project.status_title(:plan_posts)
        %small.text-center=t('stages.plans', count: @project.plan_post.count)
    -else
      %a.stage_menu4
        %h4.no-margin(style='color:#444444')
          4.
          =@project.status_title(:plan_posts)


  %li.panel#stage_plan
    - if  @project.status > 9
      = link_to "/project/#{@project.id}/estimate/posts" , class:"stage_menu5" do
        %h4.no-margin
          5.
          =@project.status_title(:estimate_posts)
        %small.text-center=t('stages.estimates', count: @project.estimate_posts.count)
    -else
      %a.stage_menu5
        %h4.no-margin(style='color:#444444')
          5.
          =@project.status_title(:estimate_posts)

