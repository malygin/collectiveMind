              =link_to t('menu.settings.admin_set_21'), next_stage_core_project_path(@project), id: 'change_stage'

  -#%li.divider
  %li.dropdown
    %a#messages.dropdown-toggle{'data-toggle' => 'dropdown', href: '#', title: t('menu.journal_title')}
      %i.fa.fa-comments
      - if @my_journals_count > 0
        %span.count(style='background: #e5603b;')=@my_journals_count
      -else
        %span.count=@my_journals_count

    %ul#messages-menu.dropdown-menu.messages{role: 'menu'}
      -unless @my_journals.empty?
        - @my_journals.each do |journal, k|
          %li{role: 'presentation'}
            %p.message{href: '#'}
              =image_tag journal.user.avatar.url(:thumb), style: 'margin-left: 10px;'
              .details(style='margin-left: 60px;')
                .sender
                  %span.color-teal=journal.user
                  - if k > 1
                    %br
                    %span.color-red=t('menu.journal_count', count: k-1)
                .text
                  = journal_parser(journal, @project.id).html_safe
        %li{role: 'presentation'}
          %a.text-align-center.see-all{href: "/project/#{@project.id}/users/#{current_user.id}/journal_clear", "data-method" => "put"}
            =t('menu.journal_clear')
            %i.fa.fa-arrow-right
      -else
        %li
          %a=t('menu.journal_empty')

  -#%li.divider
  -#%li.hidden-xs
  -#  %a{href: '/', id: 'root_page', title: t('menu.main')}
  -#    %i.fa.fa-home
  %li.dropdown
    %a#account.dropdown-toggle{'data-toggle' => 'dropdown', href: '#', title: t('menu.account')}
      %i.fa.fa-user
    %ul#account-menu.dropdown-menu.account{role: 'menu'}
      %li.account-picture{role: 'presentation'}
        %a.pull-left(href="/project/#{@project.id}/users/#{current_user.id}" id='go_to_profile')
          = image_tag current_user.avatar.url(:thumb),  class: 'media-object'
        =current_user.to_s

      %li{role: 'presentation'}
        = link_to t('menu.profile_edit'), edit_user_path(@project, current_user), id: 'go_to_edit_profile'

      %li{role: 'presentation'}
        = link_to t('menu.journal_title'), user_path(@project, current_user)
  -#%li.visible-xs.divider
  %li.visible-xs
    %a.btn-navbar{'data-target' => '.sidebar', 'data-toggle' => 'collapse', href: '#', title: ''}
      %i.fa.fa-bars
  %li.hidden-xs
    %a{href: '/users/sign_out', 'data-method' => 'delete', id: 'sign_out', title: t('menu.sign_out')}
      %i.fa.fa-sign-out
