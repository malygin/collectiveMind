  %li.hidden-xs.divider
  %li.dropdown
    %a#messages.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :title => "Уведомления"}
      %i.fa.fa-comments
      - if @my_journals_count > 0
        %span.count(style='background: #e5603b;')=@my_journals_count
      -else
        %span.count=@my_journals_count


    %ul#messages-menu.dropdown-menu.messages{:role => "menu"}
      -unless @my_journals.empty?
        - @my_journals.each do |journal, k|
          %li{:role => "presentation"}
            %p.message{:href => "#"}
              =image_tag journal.user.avatar.url(:thumb), style: 'margin-left: 10px;'
              .details(style="margin-left: 60px;")
                .sender
                  %span.color-teal=journal.user
                  - if k >1
                    %br
                    %span.color-red="и еще #{k-1} похожих"
                .text
                  = journal_parser(journal, @project.id).html_safe
        %li{:role => "presentation"}
          %a.text-align-center.see-all{:href => "/project/#{@project.id}/users/#{current_user.id}"}
            Очистить
            %i.fa.fa-arrow-right
      -else
        %li
          %a Уведомлений нет

  %li.divider

