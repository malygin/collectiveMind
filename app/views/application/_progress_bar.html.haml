.knob-block
  .knob_label
    %small Ваш прогресс на стадии
  .progress-knob
    .knob-content
      .knob-item
        %input.knob#knob-1{ 'data-anglearc' => '360', 'data-angleoffset' => '70', 'data-bgcolor' => '#f4f4f4',
                'data-end' => "#{@project.status > 0 ? @questions_progress || 0 : 0}", 'data-fgcolor' => "#{color_progress_bar}",
                'data-font' => "'Open Sans', sans-serif", 'data-thickness' => '.1', value: '0' }

.knob-block
  .knob_label
    %small Прогресс других участников
  .progress-knob
    .knob-content
