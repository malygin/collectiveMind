= form_for @post,url: {project: @project.id, action: @post.persisted? ? 'update' : 'create'},  html: { class: 'lt_new' } do |f|
  = f.text_area :content, class: 'post',  onkeyup: "activate_button(this);" , style: 'width: 100%; height: 300px;'
  %br
  %br
  .input-group
    =select_tag 'aspect_id', options_from_collection_for_select(@aspects, 'id', 'content', @post.core_aspects.first.id), promt: t('form.select_topic'), class: 'form-control', style: 'width: 200px;'
    = f.submit t('form.save'),  class:'btn btn-success btn-sm', id:'send_post'