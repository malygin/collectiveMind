$('#note_for_post_#{@post_aspect_note ? @post_aspect_note.id : @post.id}_#{@type}').remove();

$('#note_form_#{@post_aspect_note ? @post_aspect_note.id : @post.id}_#{@type}').append(
'<div id="post_note_#{@post_note.id}"><a id="destroy_post_note_#{@post_note.id}" rel="nofollow" data-remote="true" data-method="put" data-confirm="#{t('confirm.delete_note')}" href="/project/#{@project.id}/#{@post.stage_name}/posts/#{@post.id}/destroy_note?con_id=#{@post_aspect_note ? @post_aspect_note.id : nil}&note_id=#{@post_note.id}&type_field=#{@type.to_i}">'+
'<span class="glyphicon glyphicon-remove text-danger pull-right" style="cursor:pointer;text-decoration:none;font-size:15px;"></span></a>'+
'<li id="li_note_#{@post_note.id}">#{@post_note.content}</li></div>' );

$('#note_form_#{@post_aspect_note ? @post_aspect_note.id : @post.id}_#{@type}').addClass('border_note');

-if @post.current_class?(:discontent)
  $("##{id_for_type_field(@type.to_i)}_#{@post.id}").removeClass('label-g label-success').addClass('label-danger');
-elsif @post.current_class?(:concept)
  $("##{id_for_concept_type(@type.to_i)}").removeClass('color-blue color-green color-orange').addClass('color-red');

$('#post_note_#{@post_note.id}').effect("highlight", {color: '#f5cecd'}, 1000);

