-if @post
  -if params[:discuss_status]
    -if @post.discuss_status
      $("#discuss_stat_post_#{@post.id} span").removeClass('label-default').addClass('label-danger');
    -else
      $("#discuss_stat_post_#{@post.id} span").removeClass('label-danger').addClass('label-default');
  -elsif params[:approve_status]
    -if @post.approve_status
      $("#approve_stat_post_#{@post.id}").addClass('font_red');
      $("div[data-important='#{@post.id}']").addClass('important');
    -else
      $("#approve_stat_post_#{@post.id}").removeClass('font_red');
      $("div[data-important='#{@post.id}']").removeClass('important');