-if @vote
  -if @against == 'true'
    $("#minus_counter_#{@post.id}").effect("highlight", {color: '#f5cecd'}, 1000);
    $("#minus_counter_#{@post.id}").html(parseInt($("#minus_counter_#{@post.id}").html())+1)
    $("#minus_counter_#{@post.id}").click(function(e) { return false; });
  -else
    $("#plus_counter_#{@post.id}").effect("highlight", {color: '#f5cecd'}, 1000);
    $("#plus_counter_#{@post.id}").html(parseInt($("#plus_counter_#{@post.id}").html())+1)
    $("#plus_counter_#{@post.id}").click(function(e) { return false; });


