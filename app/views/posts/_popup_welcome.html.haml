.modal.fade.md-modal-explanation{ id: "modal-explanation-#{number_current_stage}",
class: "#{show_check_field?(name_controller.to_s + '_intro') ? 'shown_intro' : ''}" }
  .modal-dialog.modal-lg
    %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"} &times;
    .modal-content
      .popup.popup_rounded
        .modal_badge.rounded_2.font_white{ class: "back_color_stage#{number_current_stage}" }
          = number_current_stage
          СТАДИЯ

        %h2
          = image_tag 'good-shot1.png', class: 'expl-header-img-1'
          = t("welcome.header")
        = t("welcome.#{name_controller}.heading").try(:html_safe)

        %h2
          = image_tag 'flag1.png', class: 'expl-header-img-2'
          Что делать?
        = t("welcome.#{name_controller}.working").try(:html_safe)

        = link_to send("check_field_#{name_controller}_path", @project, check_field: "#{name_controller}_intro", status: true),
        method: :put, remote: true, id: "#{name_controller}_intro" do
          %button.btn.red.md-close-modal= t("welcome.begining")
