-if params[:discontent_status]
  $('#dis_stat_comment_#{@comment.id} span').toggleClass('label-default label-danger')
-if params[:concept_status]
  $('#con_stat_comment_#{@comment.id} span').toggleClass('label-default label-warning')
-if params[:discuss_status]
  $('#discuss_stat_comment_#{@comment.id} span').toggleClass('label-default label-danger')
  $('#comment_content_#{@comment.id}').toggleClass('discuss_comment')



