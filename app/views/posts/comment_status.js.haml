-if params[:discontent]
  $('#discontent_comment_#{@comment.id} span').toggleClass('label-default label-danger')
-if params[:concept]
  $('#concept_comment_#{@comment.id} span').toggleClass('label-default label-warning')
-if params[:discuss_status]
  $('#discuss_stat_comment_#{@comment.id} span').toggleClass('label-default label-danger')
  $('#comment_content_#{@comment.id}').toggleClass('discuss_comment')
-if params[:approve_status]
  $('#approve_stat_comment_#{@comment.id} span').toggleClass('label-default label-success')


