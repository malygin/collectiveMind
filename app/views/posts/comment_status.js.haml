-if @comment
  -if params[:discuss_status]
    -if @comment.discuss_status
      $('#discuss_stat_comment_#{@comment.id} span').removeClass('label-default').addClass('label-danger')
    -else
      $('#discuss_stat_comment_#{@comment.id} span').removeClass('label-danger').addClass('label-default')

  -if params[:approve_status]
    -if @comment.approve_status
      $('#approve_stat_comment_#{@comment.id} span').removeClass('label-default').addClass('label-success')
    -else
      $('#approve_stat_comment_#{@comment.id} span').removeClass('label-success').addClass('label-default')
