.avatar
	= link_to gravatar_for(user), "/project/#{@project.id}/users/#{user.id}"
	%br
	- if user.expert? or user.admin?
		%span.role= user.role_name
		%br

	- unless user.expert? or user.admin?
		%span.rate_small= user.score
		%span.role балов
		%br
		-user.awards.for_project(@project.id).each do |award|
			= image_tag award.url, :title => award.name