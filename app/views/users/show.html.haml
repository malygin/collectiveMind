=link_to 'вернуться к процедуре', '/project/'+@project.id.to_s
%br
- if boss?
    .scoreBar
        =link_to "+20 баллов",  "/project/"+@project.id.to_s+"/users/"+@user.id.to_s+"/add_score/20", :remote => true, :method => :put, class: "voteCounter"
        |
        =link_to "+40 баллов",  "/project/"+@project.id.to_s+"/users/"+@user.id.to_s+"/add_score/40", :remote => true, :method => :put, class: "voteCounter"
        |
        =link_to "+20 баллов за эссе",  "/project/"+@project.id.to_s+"/users/"+@user.id.to_s+"/add_score_essay/20", :remote => true, :method => :put, class: "voteCounter"
        |
        =link_to "+40 баллов за эссе",  "/project/"+@project.id.to_s+"/users/"+@user.id.to_s+"/add_score_essay/40", :remote => true, :method => :put, class: "voteCounter"
        |


%table
    %tr
        %td
            #pie_chart(style="width: 400px;")
        %td(style="padding-left: 20px;")
            .wholePost
                = render 'users/user_post', :user =>  @user
                .posts
                    %span.namedate
                        =  @user.name_title

                        - if current_user == @user
                            (это вы)
                    %br
                    - if current_user == @user
                        =link_to 'редактировать информацию о себе',  "/project/#{@project.id}/users/#{@user.id}/edit", class: "name"
            Всего очков:
            %span.rate#score=@user.score
            %br
            Как аналитик:
            %span.rate#score_a=@user.score_a
            %br
            Как генератор идей:
            %span.rate#score_g=@user.score_g
            %br
            Как оценщик:
            %span.rate#score_o=@user.score_o
            %br
            %br
            %b Достижения:
            %br
            - if @user.awards.for_project(@project.id).empty?
                пока нет ни одного

            -else
            %br
                -@user.awards.for_project(@project.id).each do |award|
                    = image_tag award.url, :title => award.name
                    = award.name
                    %br
                    %small= award.desc
                    %br

#tabs
    %ul
        %li=link_to "Активность",'#tabs-1'
        %li=link_to "Идеи  (#{@user.life_tape_posts.for_project(@project.id).count})",'#tabs-2'
        %li=link_to "Несовершенства (#{@user.discontent_posts.for_project(@project.id).count})",'#tabs-3'
    #tabs-1
        - @journals.each do |journal|
            %p.righttext
                =Russian::strftime(journal.created_at,"%d %B %k:%M:%S ")
                %b= journal.user.name_title
                = journal_parser(journal, @project.id).html_safe
    #tabs-2
        - unless @user.life_tape_posts.for_project(@project.id).empty?
            = render :partial => 'shared/post', :collection =>  @user.life_tape_posts.for_project(@project.id)

    #tabs-3
        - unless @user.discontent_posts.for_project(@project.id).empty?
            #tabs2
                %ul
                    %li=link_to "Можно отправлять (#{@user.discontent_posts.for_project(@project.id).ready_for_post.count})",'#tabs2-1'
                    %li=link_to "Рано отправлять (#{@user.discontent_posts.for_project(@project.id).not_ready_for_post.count})",'#tabs2-2'
                    %li=link_to "На рассмотрении (#{@user.discontent_posts.for_project(@project.id).for_expert.count})",'#tabs2-3'
                    %li=link_to "Принятые (#{@user.discontent_posts.for_project(@project.id).accepted.count})",'#tabs2-4'
                    %li=link_to "Архив (#{@user.discontent_posts.for_project(@project.id).archive.count})",'#tabs2-5'
                #tabs2-1
                    =render   @user.discontent_posts.for_project(@project.id).ready_for_post
                #tabs2-2
                    =render   @user.discontent_posts.for_project(@project.id).not_ready_for_post
                #tabs2-3
                    =render   @user.discontent_posts.for_project(@project.id).for_expert
                #tabs2-4
                    =render   @user.discontent_posts.for_project(@project.id).accepted
                #tabs2-5
                    =render   @user.discontent_posts.for_project(@project.id).archive










