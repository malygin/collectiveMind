%h2
  Обсуждение совета с автором
%section.widget.widget-tabs
  .body.tab-content
    .media.option_for_selectize{id: "post_#{@advice.id}", project: "#{@project.id}", post: "#{@advice.id}"}
      - if @advice.user
        = render 'users/user_post', user: @advice.user
      .media-body
        - if @advice.user
          .media-heading
            = link_to @advice.user, user_path(@project, @advice.user)
        %br
    = @advice.content

    %br
    %br
    %ul.media-list.chat-messages#comments
      = render @advice.comments.main
    - if signed_in?
      %br
      = render partial: 'advice_comments/form'
