%div.tab-pane(id="dis_#{pa.id}")
  %div
    - if pa.discontent.status == 5
      %p.ftable.fline
        = select_tag "imp[#{pa.id}]", options_for_select({ 'лишнее' => '0','маловажное' => '30','важное' => '60','очень важное' => '90'  },"imp[#{pa.id}]"), :prompt => 'Выберите важность'

  %div.panel.panel-default
    %div.panel-body
      -#%button.btn.btn-info.btn-sm.pull-right(data-toggle="modal" data-target="#modalStage3")
      -#  Показать пример
      %h5.text-infoУстраняемое несовершенство:
      =render partial:'discontent/posts/post_short2', object: pa.discontent
      %br
      %hr
      #select0
        .panel.panel-info
          .panel-heading
            %h5.text-success
              %b A.*
            %p.text-info
              %b=t('form.novation_what')
            .form-group.has-danger=pa.name
            %p.text-info
              %b=t('form.novation_how')
            .form-group.has-danger=pa.content


        .panel.panel-info
          .panel-heading
            %h5.text-success
              %b B.*
            %p.text-info
              %b=t('form.cond')
              .form-group.has-success=pa.positive
            %p.text-info
              %b=t('form.cond_res')
              .form-group.has-success=pa.positive_r
            %p.text-info
              %b=t('form.cond_s')
              .form-group.has-success=pa.positive_s


        %hr
        %h5.text-success
          %b C.
        %p.text-info
          %b=t('form.negative')
          .form-group.has-success=pa.negative
        %p.text-info
          %b=t('form.negative_res')
          .form-group.has-success=pa.negative_r
        %p.text-info
          %b=t('form.negative_s')
          .form-group.has-success=pa.negative_s

        %hr
        %h5.text-success D.
        %p.text-info
          %b=t('form.obstacles_bcd')
        .form-group.has-success
          =pa.obstacles

        .panel.panel-info
          .panel-heading
            %h5.text-success
              %b E.*
            %p.text-info
              %b=t('form.problems')
            .form-group.has-success=pa.problems
            %p.text-info
              %b=t('form.reality')
            .form-group.has-success=pa.reality

  %br
  %b  Предположим, что будущее уже наступило и все предложенные ресурсы созданы и работают. Какова вероятность, что с их помощью несовершенство будет устранено--
  .field
    = f.label "-- 1) полностью ?"
    = select_tag "op[0][#{pa.id}][1]",   options_for_select([["невероятно", 0],["маловероятно", 1], ["вероятно", 2], ["очень вероятно", 3]], est.op1)
  .field
    = f.label "-- 2) в значительной мере ?"
    = select_tag "op[0][#{pa.id}][2]",   options_for_select([["невероятно", 0],["маловероятно", 1], ["вероятно", 2], ["очень вероятно", 3]], est.op2)
  .field
    = f.label "-- 3) в небольшой мере?"
    = select_tag "op[0][#{pa.id}][3]",   options_for_select([["невероятно", 0],["маловероятно", 1], ["вероятно", 2], ["очень вероятно", 3]], est.op3)
  .field
    = f.label "-- 4) в ничтожной  мере ?"
    = select_tag "op[0][#{pa.id}][4]",   options_for_select([["невероятно", 0],["маловероятно", 1], ["вероятно", 2], ["очень вероятно", 3]], est.op4)
  .field
    = f.label 'Объясните, почему вы так считаете'
    %br
    = text_area_tag "op_text[0][#{pa.id}]", est.op,   rows: 3, style: 'width: 100%;'
  %br
  %b Функционирование ресурсов потребует материальных и трудовых затрат. Какова вероятность, что эти затраты окажутся—
  .field
    = f.label '--1) значительными '
    = select_tag "ozf[0][#{pa.id}][1]",   options_for_select([["невероятно", 0],["маловероятно", 1], ["вероятно", 2], ["очень вероятно", 3]], est.ozf1)
  .field
    = f.label '-- 2) средними '
    = select_tag "ozf[0][#{pa.id}][2]",   options_for_select([["невероятно", 0],["маловероятно", 1], ["вероятно", 2], ["очень вероятно", 3]], est.ozf2)
  .field
