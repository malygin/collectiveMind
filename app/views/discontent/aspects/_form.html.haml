#modal_aspect_view.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{'aria-hidden' => 'true', 'data-dismiss' => 'modal', type: 'button'} ×
        %h4.modal-title=t('form.discontent_aspect')
      .modal-body
        %br
        = form_for aspect, url: {project: @project.id,  action: aspect.persisted? ? 'update' : 'create'}, remote: aspect.persisted? ? true : false do |f|
          = render 'shared/notice_messages', object:f.object
          = f.text_field :content, class: 'form-control', placeholder: 'Введите название темы', id: 'aspect_text_field_content'
          %br
          = f.text_area :short_desc, class: 'form-control', style: 'height: 70px;', placeholder: 'Введите описание темы', id: 'aspect_text_area'
          %br
          .form-group
            %label.radio-inline
              = f.radio_button :status, '0'
              %span.label.label-success Основная
            %label.radio-inline
              = f.radio_button :status, '1'
              %span.label.label-danger Дополнительная
          .pull-right
            = f.submit 'Сохранить', id: 'send_post_aspect', class: 'btn btn-success'

      .modal-footer
        %button.btn.btn-default{'data-dismiss' => 'modal', type: 'button'} Отмена
