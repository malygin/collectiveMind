.checkbox{id: "aspect_checkbox_#{aspect_form.id}"}
    =  check_box_tag 'aspects_filter[]', aspect_form.id, current_user.discontent_aspects.include?(aspect_form), onclick: "show_filter_aspects_button();", id: "aspect_#{aspect_form.id}"
    -if current_user.boss?
        .pull-right{:id => "redactor_aspect_#{aspect_form.id}"}
            =link_to edit_discontent_aspect_path(@project,aspect_form),:remote => true, :id => "edit_aspect_#{aspect_form.id}" do
                %span{:class=>"glyphicon glyphicon-pencil text-success", :style=>"cursor:pointer;text-decoration:none;"}
            =link_to discontent_aspect_path(@project,aspect_form), :method => :delete, :remote => true, :confirm => 'Удалить аспект?',:id => "destroy_aspect_#{aspect_form.id}" do
                %span{:class=>"glyphicon glyphicon-remove text-danger", :style=>"cursor:pointer;text-decoration:none;"}
    %div{:id => "edit_aspect_content_#{aspect_form.id}"}
        = "#{aspect_form.content} (#{aspect_form.life_tape_posts.count})"