.media{id: "post_advice_#{post_advice.id}"}
  = render 'users/user_post', user: post_advice.user
  .media-body
    .media-heading
      = link_to post_advice.user, user_path(@project, post_advice.user)
    %span
      = trim_content(post_advice.content)
    %br
    = link_to t('link.more'), discontent_post_advice_path(@project, post_advice), class: 'btn btn-primary btn-xs'
    \|
    = link_to discontent_post_advice_path(@project, post_advice), method: :delete, data: {confirm: t('confirm.delete_advice')} do
      %button.btn.btn-xs.btn-danger{type: 'button'}
        = t('link.delete')
        %i.fa.fa-trash-o
