= form_for @discontent_post_advice do |f|
  - if @discontent_post_advice.errors.any?
    #error_explanation
      %h2= "#{pluralize(@discontent_post_advice.errors.count, "error")} prohibited this discontent_post_advice from being saved:"
      %ul
        - @discontent_post_advice.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :approved
    = f.check_box :approved
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :discontent_post
    = f.text_field :discontent_post
  .actions
    = f.submit 'Save'
