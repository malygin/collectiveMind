$('#note_for_post_#{@post.id}_#{@type}').remove();

$('#where_form_#{@post.id}_#{@type}').append(
'<div id="post_note_#{@post_note.id}"><a id="destroy_post_note_#{@post_note.id}" rel="nofollow" data-remote="true" data-method="delete" data-confirm="Удалить замечание?" href="/project/#{@project.id}/discontent/posts/#{@post.id}/post_note_destroy?note_id=#{@post_note.id}&type_field=#{@type.to_i}">'+
'<span class="glyphicon glyphicon-remove text-danger pull-right" style="cursor:pointer;text-decoration:none;font-size:15px;"></span></a>'+
'<li id="li_note_#{@post_note.id}">#{@post_note.content}</li></div>' );

$('#where_form_#{@post.id}_#{@type}').addClass('border_note');
-if @post.send(column_for_type_field(@type.to_i)) == false
  $("##{id_for_type_field(@type.to_i)}_#{@post.id}").removeClass('label-g label-success').addClass('label-danger');

$('#content_dispost_#{@post.id}_#{@type}').removeClass('disabled');
$('#post_note_#{@post_note.id}').effect("highlight", {color: '#f5cecd'}, 1000);