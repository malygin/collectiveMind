- if @post.valid?
  $('.notice_messages').hide();
  $('#create_discontent_success').fadeIn(3000).fadeOut('slow');
  $('#discontent_post_content, #discontent_post_what, #discontent_post_whered, #discontent_post_whend ').val('');
- else
  $('.notice_messages').html("#{escape_javascript(render 'shared/notice_messages', object: @post)}");
