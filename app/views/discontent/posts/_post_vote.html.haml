.container.padding30
  .row
    - @user_voter.content_for_vote(@project, status).each do |post_vote|
      .col-sm-4.vote_item_cont{ id: "post_vote_#{post_vote.id}" }
        .vote_item.themes_cont
          .heading_cont
            %h6
              = post_vote.content
          .item_expandable_imperf.themes_cont{ style: "height:50px;" }
            %p
              = post_vote.what
          .post-theme{ id: "stripe#{post_vote.id}" }
            - post_vote.post_aspects.each_with_index do |aspect, index|
              %span.tag-stripes{ class: "#{'active' if index == 0}", style: "background-color: #{aspect.color};" }
                %span.tags
                  = aspect.content
          .divider10
          .vote_controls.text-center
            - @project.vote_folders.each do |number_folder, folder|
              - if number_folder > 0
                = link_to vote_discontent_post_path(@project, post_vote.id, status: number_folder), id: "vote_button_#{post_vote.id}_#{number_folder}", method: :put, remote: true, class: "btn vote_button #{'voted' if status == number_folder}",
                'data-icon-class' => 'fa-exclamation', 'data-vote-role' => "#{status == number_folder ? 'all' : folder[:role]}", 'data-vote-default-role' => "#{folder[:role]}", role: 'button',
                'data-placement' => 'bottom', 'data-toggle' => 'tooltip', title: t("vote.#{@project.current_stage_type}.#{folder[:role]}.title_button").try(:html_safe) do
                  %i.vote{ class: "vote-vote#{number_folder}" }

            -#%span.vote_open_detail_imperf.grey
            -#  %i.fa.fa-angle-right.font_white
            .divider15

  .divider50