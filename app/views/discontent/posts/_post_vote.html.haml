.col-sm-4.vote_item_cont{id: "post_vote_#{post_vote.id}"}
  .vote_item.color_me{"data-me-action" => "border-top-color", "data-me-color" => "1", "data-me-type" => "imperf"}
    .heading_cont
      %h6
        = trim_string(post_vote.content, size = 50)
    .vote_tag.color_me{style: "background: #{post_vote.post_aspects.first.color if post_vote.post_aspects.first}"}
      Аспект:
      = post_vote.post_aspects.first.content if post_vote.post_aspects.first
    .divider10
    .vote_controls.text-center
      = link_to vote_discontent_post_path(@project, post_vote.id, status: 1), remote: true, method: :put do
        %button.btn.vote_button.v_btn_1{"data-icon-class" => "fa-exclamation", "data-vote-role" => "important", :role => "button"}
          %i.fa.fa-exclamation
      = link_to vote_discontent_post_path(@project, post_vote.id, status: 2), remote: true, method: :put do
        %button.btn.vote_button.v_btn_2{"data-icon-class" => "fa-check", "data-vote-role" => "not_important", :role => "button"}
          %i.fa.fa-check
      = link_to vote_discontent_post_path(@project, post_vote.id, status: 3), remote: true, method: :put do
        %button.btn.vote_button.v_btn_3{"data-icon-class" => "fa-minus", "data-vote-role" => "unnecessary", :role => "button"}
          %i.fa.fa-minus
    .divider15
