.container.padding30
  .row
    - @user_voter.content_for_vote(@project, status).each do |post_vote|
      .col-sm-4.vote_item_cont{id: "post_vote_#{post_vote.id}"}
        .vote_item.themes_cont
          .heading_cont
            %h6
              = post_vote.content
          .item_expandable_imperf.themes_cont{style: "height:50px;"}
            %p
              = post_vote.what
          .post-theme{id: "stripe#{post_vote.id}"}
            - post_vote.post_aspects.each_with_index do |aspect, index|
              %span.tag-stripes{class: "#{'active' if index == 0}", style: "background-color: #{aspect.color};"}
                %span.tags
                  = aspect.content
          .divider10
          .vote_controls.text-center
            - @project.vote_folders.each do |num_folder, folder|
              -if num_folder > 0
                %button.btn.vote_button{data: {project: @project.id, id: post_vote.id, status: num_folder, stage: @project.current_stage_title}, class: "#{'voted' if status == num_folder}",
                "data-icon-class" => "fa-exclamation", "data-vote-role" => "#{status == num_folder ? 'all' : folder[:role]}", "data-vote-default-role" => "#{folder[:role]}", :role => "button",
                'data-placement' => 'bottom', 'data-toggle' => 'tooltip', title: t("vote.#{@project.current_stage_type}.#{folder[:role]}.title_button").html_safe}
                  %i.vote{class: "vote-vote#{num_folder}"}

            -#%span.vote_open_detail_imperf.grey
            -#  %i.fa.fa-angle-right.font_white
            .divider15

  .divider50