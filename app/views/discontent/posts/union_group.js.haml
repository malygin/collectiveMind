-if @type_list == 'new_posts'
  $('#li_id_#{@post.id}:visible').remove();
  $('#group_select_#{@post.id}:visible').remove();
  $('#post_content_#{@new_post.id}:visible').append('<li id="li_id_#{@post.id}">#{@post.content}</li>');
  $('#post_content_#{@new_post.id}:visible').append("#{escape_javascript(render partial: 'group_select', object: @post)}");
  $('#change_group_success_#{@parent_post}').fadeIn('slow').delay(1000).fadeOut('slow');
-else
  $('#add_disgroup_#{@post.id}:visible').html("#{t('show.discontent.added_group')} #{escape_javascript(link_to @post.discontent_post.content, discontent_post_path(@project, @post.discontent_post))}");
  $('#add_disgroup_#{@post.id}:visible').effect("highlight", {color: '#f5cecd'}, 1000);
  $('#add_group_success_#{@post.id}:visible').fadeIn('slow').delay(1000).fadeOut('slow');

