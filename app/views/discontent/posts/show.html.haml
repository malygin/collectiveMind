.media.option_for_selectize{id: "post_#{@post.id}", project: "#{@project.id}", post: "#{@post.id}"}
  - if @post.user
    = render 'users/user_post', user: @post.user
  .media-body
    - if @post.user
      .media-heading
        = link_to @post.user, user_path(@project, @post.user)
    %br
    -@post.post_aspects.each do |da|
      = render partial: 'discontent/aspects/aspect', object: da
    =discontent_style_name(@post.style)
    %br
    = render partial: 'post_content', object: @post

    .row
      .col-md-10
        %small.text-muted
          = Russian::strftime(@post.created_at, '%d %B %k:%M:%S ')
          =improve_comment(@post).html_safe if improve_comment(@post)

    = render 'shared/post_social_bar2', post: @post
    %span
      -if @post.status == 2 and boss?
        = link_to t('show.discontent.ungroup'), {action: :ungroup_union, id: @post.id}, method: :put, data: {confirm: t('confirm.accept')}, class: 'btn btn-warning btn-xs'
        \|
      = render 'shared/post_edit_bar', post: @post

    - if @post.status == 2
      .panel.panel-default
        %p
          %h4=t('show.discontent.union')
        .panel-body{id: 'panel_union'}
          =render @post.discontent_posts
      %br
      - if boss?
        .text-success#dispost_success(style='display:none;')
          =t('show.discontent.add_group_success')
        =select_tag 'selectize_discontent',
        options_from_collection_for_select(Discontent::Post.for_union(@project.id), 'id', 'show_content'),
        class: 'selectized',
        include_blank: true,
        placeholder: t('show.discontent.select_prompt')

    %br
    %br
    - if @project.advices_discontent?
      %h3
        Советы участников
      %ul.media-list#advices.chat-messages
        - (@post.advices.approve + current_user.discontent_post_advices.unapproved).each do |advice|
          = render partial: 'advices/advice', locals: {advice: advice}
      - if signed_in?
        %br
        = render partial: 'advices/form', locals: {advice: Advice.new, url: discontent_advices_path(@project).concat("?discontent_id=#{@post.id}")}
      %br

    %h3
      Комментарии участников
    %ul.media-list#comments.chat-messages
      = render partial: 'shared/comment',collection: @comments
    .text-center
      = will_paginate @comments
    - if signed_in?
      = render partial: 'shared/comment_form', locals: { comment: @comment, url_link: url_for(controller: @post.class.name.underscore.pluralize,  action: 'add_comment')}
