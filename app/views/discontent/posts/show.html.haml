%p#notice= notice

.wholePost
  = render 'users/user_post', :user => @post.user
  .posts
    = render 'users/user_name', :user => @post.user, :created_at => @post.created_at
    %p
      %br= @post.content
   
    = render 'shared/post_social_bar', :post => @post


= link_to 'Edit', edit_discontent_post_path(@post)
\|
= link_to 'Back', discontent_posts_path

- if signed_in?
  = render :partial => 'shared/comment_form', :locals => { :comment => @comment, :url_link => add_comment_discontent_post_path(@post.id)}

= render :partial => 'shared/comment',:collection => @post.comments, :locals => { :path_link => '/discontent/comments/'}