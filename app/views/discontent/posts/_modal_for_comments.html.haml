#modal_show_comments.modal.fade{'aria-hidden' => 'true', 'aria-labelledby' => 'myModalLabel', role: 'dialog', style: 'display: none;', tabindex: '-1'}
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %button.close{'aria-hidden' => 'true', 'data-dismiss' => 'modal', type: 'button'} ×
        %h3#myModalLabel.modal-title Комментарии
      .modal-body
        .blog-comments
          %h4
            %i.fa.fa-comments.color>
            =@post.comments.size
            комментариев
          %hr/
          %ul.media-list#comments.chat-messages
            = render partial: 'shared/comment',collection: @comments

      .modal-footer
        - if signed_in?
          = render partial: 'shared/comment_form', locals: { comment: @comment, url_link: url_for(controller: @post.class.name.underscore.pluralize,  action: 'add_comment')}
