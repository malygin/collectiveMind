#render_fast_discussion_discontents
  =render partial:'form_wizard'
%section.widget
  %header
    .row
      .col-md-9
        %h3.color-red
          2 этап: Анализ ситуации.
          =@aspect_post.content
          %br
        %span(style='font-size: 20px;line-height: 30px;')
          Сбор несовершенств в рамках процедуры:
          =@project.name

      - if signed_in? and (@project.status == 3 or @project.status == 4 or @project.status == 5)
        .col-md-3
          .pull-right
            = link_to 'Быстрый cтарт!', discontent_posts_fast_discussion_discontents_path(@project) ,remote: true, id: 'fast_discussion_discontents',  class: 'btn btn-lg btn-danger'


  .body

    %a{name:'top'}
    - if signed_in? and @project.status ==3
      = link_to '+ Добавить свое несовершенство', new_discontent_post_path(@project, asp: params[:asp]) , id: 'add_record',  class: 'btn  btn-danger'
      %br
      %br

    - if can_union_discontents?(@project)
      .row
        .col-md-12
          %section.widget
            .body.widget-panel
              %ul.nav.nav-tabs#tab_posts
                %li#old.active
                  %a(href="#origin" data-toggle="tab" onclick="$('#new_posts').fadeOut();")
                    Исходные #{@aspect_post.aspect_posts.count}
                %li#new
                  =link_to "Объединенные #{@project.discontent_accepted_post.count}", "/project/#{@project.id}/discontent/posts/unions", remote: true
              %br
              %br
              .tab-content
                #origin.tab-pane.fade.in.active
                  .row
                    .col-md-6
                      %section.widget
                        %header
                          %h4
                            Тип:
                            %span.label.label-success Отсутствующие достоинства
                            %hr
                        .body
                          .slimScrollDiv
                            %ul.news-list
                              =render partial:'post_short', collection: @aspect_post.aspect_posts.by_positive(@status)

                    .col-md-6
                      %section.widget
                        %header
                          %h4
                            Тип:
                            %span.label.label-danger Имеющиеся недостатки
                          %hr
                        .body
                          .slimScrollDiv
                            %ul.news-list
                              =render partial:'post_short', collection: @aspect_post.aspect_posts.by_negative(@status)
                #new_posts.tab-pane.fade
    -else
      .row
        .col-md-6
          %section.widget
            %header
              %h4
                Тип:
                %span.label.label-success Отсутствующие достоинства
                %hr
            .body
              .slimScrollDiv
                %ul.news-list
                  =render partial:'post_short', collection: @aspect_post.aspect_posts.by_positive(@status)

        .col-md-6
          %section.widget
            %header
              %h4
                Тип:
                %span.label.label-danger Имеющиеся недостатки
              %hr
            .body
              .slimScrollDiv
                %ul.news-list
                  =render partial:'post_short', collection: @aspect_post.aspect_posts.by_negative(@status)


