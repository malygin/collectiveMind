= form_for @discontent_post do |f|
  -if @discontent_post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@discontent_post.errors.count, "error")} prohibited this discontent_post from being saved:"
      %ul
        - @discontent_post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :when
    = f.text_area :when
  .field
    = f.label :where
    = f.text_area :where
  .field
    = f.label :status
    = f.number_field :status
  .actions
    = f.submit 'Save'
