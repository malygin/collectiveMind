.content
  -#{onclick: "location.href='#{discontent_post_path(@project, post_content)}';",style:"cursor: pointer;"}
  =link_to({:action => :status_post, :id => post_content.id},:remote => true,:method => :put, :id => "label_dispost_#{post_content.id}") do
    %span.label(class= "#{class_post_content(post_content.admins_pro.count, post_content.admins_against.count)}" id="what_#{post_content.id}") что
  - if post_content.status == 2 or post_content.status == 4
    %ul(id="post_content_#{post_content.id}" style="margin-left:-20px;" )
      -post_content.discontent_posts.each do |dp|
        %li{:id => "li_id_#{dp.id}"}=dp.content
  -else
    =link_to({:action => :post_note_new, :id => post_content.id, :type_field => 1},:remote => true,:method => :put, :id => "content_dispost_#{post_content.id}") do
      %span.h55(id="what_content_#{post_content.id}")=post_content.content
    %div{:id => "where_form_#{post_content.id}_1"}
      -post_content.post_notes(1).each do |dpn|
        %li{:id => "li_note_#{dpn.id}"}=dpn.content

  =link_to({:action => :status_post, :id => post_content.id},:remote => true,:method => :put, :id => "label_dispost_#{post_content.id}") do
    %span.label(class= "#{class_post_content(post_content.admins_pro.count, post_content.admins_against.count)}" id="where_#{post_content.id}") где
  =link_to({:action => :post_note_new, :id => post_content.id, :type_field => 2},:remote => true,:method => :put, :id => "content_dispost_#{post_content.id}") do
    %span.h55(id="where_content_#{post_content.id}")=post_content.whered
  %div{:id => "where_form_#{post_content.id}_2"}
    -post_content.post_notes(2).each do |dpn|
      %li{:id => "li_note_#{dpn.id}"}=dpn.content

  =link_to({:action => :status_post, :id => post_content.id},:remote => true,:method => :put, :id => "label_dispost_#{post_content.id}") do
    %span.label(class= "#{class_post_content(post_content.admins_pro.count, post_content.admins_against.count)}" id="when_#{post_content.id}") когда
  =link_to({:action => :post_note_new, :id => post_content.id, :type_field => 3},:remote => true,:method => :put, :id => "content_dispost_#{post_content.id}") do
    %span.h55(id="when_content_#{post_content.id}")=post_content.whend
  %div{:id => "where_form_#{post_content.id}_3"}
    -post_content.post_notes(3).each do |dpn|
      %li{:id => "li_note_#{dpn.id}"}=dpn.content
  =link_to 'подробнее', discontent_post_path(@project,post_content)
