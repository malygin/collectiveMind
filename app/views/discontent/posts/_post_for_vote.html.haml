.media{id: "post_#{post_for_vote.id}"}
  - if post_for_vote.user
    =link_to post_for_vote.user, user_path(@project, post_for_vote.user)
  .media-body
    = render partial: 'post_content', object: post_for_vote

%br

- if can_vote?(post_for_vote.voted(current_user).size,  @number_v, @votes)
  =link_to   @path_for_voting+"vote/"+post_for_vote.id.to_s , :remote => true, :method => :put, class: "btn btn-default btn-sm vote-button", id: "vote_#{post_for_vote.id}" do
    %span.glyphicon.text-success.glyphicon-thumbs-up
    -if boss?
      %span.glyphicon.text-success=post_for_vote.voted_users.size
    Проголосовать
-else
  %a.btn.btn-success.btn-sm.disabled.vote-button
    %span.glyphicon.text-success.glyphicon-thumbs-up
    - if boss?
      %span.glyphicon.text-success=post_for_vote.voted_users.size
    Проголосовать
