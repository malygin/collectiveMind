- unless @news.nil?
    %h1 Новости
    %p.righttext
        = @news.anons
        = link_to 'подробнее',  expert_news_post_path(@project, @news)
- if @project.status>3
    %p.righttext=link_to 'Посмотреть эссе этапа', essay_posts_path(@project,4), :id => 'essay_list'
%ul.leftlink
    %li
        = link_to "Добавлены мной (#{current_user.discontent_posts.for_project(@project.id).count})", discontent_my_path(@project,:status => 6), class: menu_status(6)
    %li
        %b
            = link_to "Обсуждаются (#{@project.discontent_ongoing_post.count})", discontent_posts_path(@project,:status => 0), class: menu_status(0)
    %li= link_to 'Архив', discontent_posts_path(@project,:status =>3), class: menu_status(3)
    -if @project.status == 4
        %li= link_to 'Голосование', discontent_posts_path(@project,:status =>2), class: menu_status(2)
    -else
        %li= link_to "Принятые (#{@project.discontent_accepted_post.count})", discontent_posts_path(@project,:status =>2), class: menu_status(2)

    - if boss?
        %li= link_to 'Из проектов и концепций', discontent_posts_path(@project,:status =>5), class: menu_status(5)
        %li= link_to "На рассмотрении (#{@project.discontent_for_admin_post.count})", discontent_posts_path(@project,:status =>1), class: menu_status(1)

-unless @journals.nil?
    .redtitle Активность
    - @journals.each do |journal|
        %p.righttext
            =Russian::strftime(journal.created_at,"%d %B %k:%M:%S ")
            =link_to journal.user.name_title,  "/project/#{@project.id}/users/#{journal.user.id}"
            = journal_parser(journal, @project.id).html_safe
        =image_tag 'dots.png', :width =>'250px;'
    %br
    %b=link_to 'смотреть все события', "/project/#{@project.id}/journal"

