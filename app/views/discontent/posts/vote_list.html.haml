.row
  .col-md-12
    %h3
      =t('voting.second_title')
      %br

%section
  %header
    %h4=t('voting.imp_aspects')
  .body
    %span Несовершенство:
    %span#prog_now=@votes != @post_all ? @votes+1 : @votes
    из
    %span#prog_all=@post_all
    .progress
      .progress-bar.progress-bar-success{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "#{(@votes/@post_all.to_f)*100}", role: "progressbar", style: "width: #{(@votes/@post_all.to_f)*100}%;"}

    -@posts.each do |post|
      =render partial: 'post_for_vote', object: post
    #vote_success.text-internal.text-center(style="display:none;" )
      %h3=t('voting.thanks')
      .col-md-6
        =link_to t('show.go_reflec'), new_essay_post_path(@project, 2),class: "btn btn-lg btn-success"
      .col-md-6
        =link_to "Перейти к списку несовершенств", discontent_posts_path(@project),class: "btn btn-lg btn-primary"
      %br
      %br
