    %ul.dropdown-menu.index-of-aspects#filter
      - @aspects.each_with_index do |asp, index|
        %li{id: "button_aspect_#{asp.id}", data: {project: @project.id, aspect: ".aspect_#{asp.id}"}}
          %input{:id => "ex2_2_#{index+1}",:name => "ex2_2", :type => "radio", :value => "#{index+1}"}/
          %label{:for => "ex2_2_#{index+1}"}
