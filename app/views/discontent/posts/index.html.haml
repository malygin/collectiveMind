.stage-info-sort-block
  .row
    %br/
    .col-md-7
      %span.stage-heading
        Несовершенства
        ="(#{@posts.count})"
        %i.fa.fa-question-circle
    .col-md-5
      .sort-block.pull-right
        %span.sort-label Сортировать:
        %span#sorter
          %span.sort-date{data: {name: 'sort', desc: -1, type: 'date'}}
          %span#tooltip2_2.sort-rate.tooltip2_2{data: {name: 'sort', desc: 0, type: 'rate'}, "data-placement" => "bottom", "data-toggle" => "tooltip", "data-trigger" => "none", :title => "При помощи этих фильтров вы можете выбирать, в каком порядке будут отображаться несовершенства."}
        %span#filter_all.sort-all{data: {aspect: "*"}} ВСЕ
        = link_to project_user_path(@project, current_user) do
          %button.btn.add-button
            %span> +
            Несовершенство

.stage-post-block
  .row#tab_aspect_posts
    = render partial: 'post_short', collection: @posts




