.ui-4.second-stage
  .container
    .sort-block
      Сортировать:
      %span.sort-item.sort-date{data: {desc: -1, type: 'date'}}
        = image_tag 'sort-date.jpg'
      %span.sort-item.sort-rate{data: {desc: 0, type: 'rate'}}
        = image_tag 'sort-rate.jpg'
