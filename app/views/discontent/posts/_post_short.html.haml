%div.col-md-4.discontent-block{id: "discontent_post_#{post_short.id}", class: "#{post_aspect_classes(post_short)}",
data: {created: "#{(post_short.created_at.to_datetime.to_f)}", popular: "#{post_short.users_pro.count + (post_short.number_views * 0.3)}"}}
  = link_to({action: :show, project: @project, id: post_short.id, asp: params[:asp]}, remote: true, id: 'show_record',
  class: "imperfection lined-block #{post_short.style == 1 ? 'imperf-pale-pink' : 'imperf-pale-blue'}" ) do
    %table
      %tr
        - if post_short.notes.present?
          %td.imperf-left-column.admin-notice
            %span.admin-notice-sign !
            .admin-notice-displayable
              - post_short.notes.each do |note|
                %li
                  = note.content
                %br
              -#Замечание модератора
              .close-admin-button
        - else
          %td.imperf-left-column

        %td.imperf-right-column
          .aspects-indexes
            - post_short.post_aspects.each do |asp|
              .circle-tag.back-color{style: "background-color:#{asp.color};"}
                = asp.short_name.present? ? asp.short_name : asp.content[0,2].mb_chars.downcase
      %tr
        %td.imperf-left-column.what-cell
          Что
        %td.imperf-right-column
          = post_short.content
      %tr
        %td.imperf-left-column
          Где
        %td.imperf-right-column
          = post_short.whered
      %tr
        %td.imperf-left-column
          Когда
        %td.imperf-right-column
          = post_short.whend
      %tr
        %td.imperf-left-column
          .imperf-bottom-line
        %td.imperf-right-column
          .imperf-bottom-line
            .info-stripe
              %span.popup-date
                = Russian::strftime(post_short.created_at,'%d %B %k:%M:%S')
              = link_to({controller: post_short.class.name.underscore.pluralize, action: :show_comments, project: @project, id: post_short.id, remote: true}) do
                %span.popup-comments
                  = post_short.comments.count
                  %i.fa.fa-comment-o
              = link_to({controller: post_short.class.name.underscore.pluralize ,action: :plus, project: @project, id: post_short.id, against: false,  remote: true},method: :put, id: "plus_post_#{post_short.id}") do
                %span.popup-likes
                  %span(id="plus_counter_#{post_short.id}" style="margin-right:0;")
                    = post_short.users_pro.count
                  %i.fa.fa-thumbs-o-up
              = link_to({controller: post_short.class.name.underscore.pluralize ,action: :plus, project: @project,  id: post_short.id, against: true, remote: true}, method: :put, id: "minus_post_#{post_short.id}") do
                %span.popup-dislikes
                  %span(id="minus_counter_#{post_short.id}" style="margin-right:0;")
                    = post_short.users_against.count
                  %i.fa.fa-thumbs-o-down
