%li{id: "post_#{post_short.id}", :class => "#{'discuss_comment' if post_short.discuss_stat }"}
  -if post_short.user
    = image_tag post_short.user.avatar.url(:thumb),  class: "pull-left img-circle"
  .news-item-info
    .name
      - if post_short.user
        =link_to post_short.user, user_path(@project, post_short.user)
        = render partial: '/shared/user_online', object: post_short.user
      - if boss? or role_expert?
        .pull-right
          =link_to({:controller => post_short.class.name.underscore.pluralize, :action => :discuss_stat, :id => post_short.id, :discuss_stat => 1},  :remote => true, :method => :put,  id: "discuss_stat_post_#{post_short.id}") do
            %span.label(class="#{label_discuss_stat(post_short)}") ТРЕБУЕТ ОБСУЖДЕНИЯ
      - elsif post_short.discuss_stat
        .pull-right
          %span.label-danger ТРЕБУЕТ ОБСУЖДЕНИЯ
    =discontent_style_name(post_short.style)
    .comment.dis-comment
      = render partial: '/discontent/posts/post_content', object: post_short
    .time
      = Russian::strftime(post_short.created_at,'%d %B %k:%M:%S')
      =improve_comment(post_short).html_safe if improve_comment(post_short)
    = render '/shared/post_social_bar2', :post => post_short
    -if boss? and @project.status == 4
      #add_group_success(style="display:none;" )
        .color-green Несовершенство успешно добавлено в группу
      -if post_short.status == 1 and !post_short.discontent_post.nil?
        .color-red{:id => "add_disgroup_#{post_short.id}"}
          Добавленно в группу
          =link_to post_short.discontent_post.content, discontent_post_path(@project, post_short.discontent_post)
      #discontents_group_select
        -if @accepted_posts
          = select_tag 'select_for_discontents_group', options_from_collection_for_select(@accepted_posts, "id", "content"),
          :prompt => 'Выберите группу', :onchange => "select_for_discontents_group(this,#{@project.id},#{post_short.id});"

