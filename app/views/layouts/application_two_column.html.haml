            %form.navbar-form.navbar-right{:role => "search"}
              .form-group
                %input.form-control{:placeholder => t('menu.search_text'), :type => "text"}/
              %button.btn.btn-default{:type => "submit"}=t('menu.search')
    .row
      .col-md-10.col-md-offset-1
        =  render partial: 'stages', :locals => { :stage => :first }
        .row
          .col-md-3
            = render partial: 'left_side'
          .col-md-9
            = yield


