%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta(http-equiv="X-UA-Compatible" content="IE=8")
    %title
      = content_for?(:title) ? yield(:title) : 'Massdecision'
    = csrf_meta_tags

    = stylesheet_link_tag 'application', media: 'all'
    %link(href="/assets/favicon.ico" rel="shortcut icon")


  %body
    .row
      .col-md-10.col-md-offset-1
        %nav.navbar.navbar-default{:role => "navigation"}
          .navbar-header
            %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            =image_tag 'logo.png'
            &nbsp;
            -#%a.navbar-brand{:href => "#"} Brand
          / Collect the nav links, forms, and other content for toggling
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            %ul.nav.navbar-nav
              %li
                %a{:href => "/"}=t('menu.main')
              %li
                %a{:href => "/help1"}=t('menu.help')
              %li
                %a{:href => "/base"}=t('menu.base_knowledge')
              %li
                %a{:href => "/userstop"}="Рейтинг участников"
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  =t('menu.switch_procedure')
                  %b.caret
                %ul.dropdown-menu
                  %li
                    %a{:href => "/procedure/1/stage/1?help1"} процедура в Ирбис
                  %li
                    %a{:href => "#"} процедура в СГУ
                  %li.divider
                  %li
                    %a{:href => "#"} Начать новую


            %ul.nav.navbar-nav.navbar-right

              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
