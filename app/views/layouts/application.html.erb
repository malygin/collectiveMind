<!DOCTYPE html>
<html>
<head>
  <title>CollectiveMind</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
  <body>
    <div class="container">
    	<%= render 'layouts/header' %>

	      <section class="round">
	      	<% flash.each do |key, value| %>
			  <div class="flash <%= key %>"><%= value %></div>
			<% end %>
			
	        <%= yield %>
	      </section>
	    <%= render 'layouts/footer' %>

    </div>
  </body>
</html>
