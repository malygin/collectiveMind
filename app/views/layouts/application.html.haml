!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta(http-equiv="X-UA-Compatible" content="IE=8")
    %title
      = content_for?(:title) ? yield(:title) : 'Massdecision'
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    /[if lte IE 9]
      <script src="http://phpbbex.com/oldies/oldies.js" charset="utf-8"></script>
  -#%link(href="/assets/favicon.ico" rel="shortcut icon")

  %body
    .outer
      -if controller.instance_of? Concept::PostsController or controller.instance_of? Discontent::PostsController
        = render partial: 'application/right_rollover'
      %header.top-bar
        .container
          .box-shadow-outer
            .tb-logo.box-shadow-5.rounded-1.pull-left
              %a{href: @project ? "/project/#{@project.id}" : '/', id: 'go_to_logo'}
                = image_tag 'logo-red.jpg', style: 'margin: auto;'
          .clearfix.visible-xs
          %nav.header-buttons.pull-left
            = link_to 'Процедура', "/project/#{@project.id}", class: 'btn btn-white rounded-2'
            .clearfix.visible-xs
            = link_to 'Кабинет', project_user_path(@project, current_user), class: 'btn btn-grey rounded-2'
            .clearfix.visible-xs
            = link_to 'Новости', journals_path(@project), class: 'btn btn-grey rounded-2'
            -#.clearfix.visible-xs
            -#%a.btn.btn-grey.rounded-2{href: "#"} Отзывы
          .pull-right.header-right
            .tb-language.dropdown.pull-right
              %a{'data-target' => '#', 'data-toggle' => 'dropdown', href: '#'}
                English
                %i.fa.fa-angle-down.color.mass-dark-blue
              %ul.dropdown-menu.dropdown-mini{role: 'menu'}
                %li
                  %a{href: '#'} Hindi
                %li
                  %a{href: '#'} Tamil
                %li
                  %a{href: '#'} Kanada
            = image_tag 'call.png', class: 'pull-right operator-pic'
            .clearfix
            .tb-language.dropdown.pull-right.user-block
              %span.rating-block.rounded-1 500
              %a{"data-target" => "#", "data-toggle" => "dropdown", href: "#"}
                = current_user.to_s if current_user
                %i.fa.fa-angle-down.color.mass-dark-blue
              - if current_user.admin?
                %br
                - if @project.prev_status
                  = link_to t("menu.settings.admin_set_#{@project.status * 2 - 2}"), pr_stage_core_project_path(@project), method: :put, id: "down_to_#{@project.prev_status}"
                  %br
                - if @project.next_status
                  = link_to t("menu.settings.admin_set_#{@project.status * 2 - 1}"), next_stage_core_project_path(@project), method: :put, id: "up_to_#{@project.next_status}"
              %ul.dropdown-menu.dropdown-mini{role: "menu"}
                %li{role: 'presentation'}
                  = link_to t('menu.account'), user_path(@project, current_user), id: 'go_to_profile'
                %li{role: 'presentation'}
                  = link_to t('menu.profile_edit'), edit_user_path(@project, current_user), id: 'go_to_edit_profile'

          .clearfix
      .main-block
        .container
          .clearfix
          = render partial: 'stages'
          .clearfix
          - if controller.instance_of? CollectInfo::PostsController
            .divider-grey
            .row.progress-bars
              = render partial: 'application/progress_bar'
            .clearfix
            .divider-grey
          = yield
    %br/
    %br/
    %span.totop
      %a{href: "#"}
        %i.fa.fa-angle-up.bg-color

    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag 'application'
