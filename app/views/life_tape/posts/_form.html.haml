= form_for @life_tape_post do |f|
  -if @life_tape_post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@life_tape_post.errors.count, "error")} prohibited this life_tape_post from being saved:"
      %ul
        - @life_tape_post.errors.full_messages.each do |msg|
          %li= msg

  %field
    = f.text_area :content, class: "life_tape_post"
    = f.hidden_field :post_id, :value=> @ancestor_id
    = select_tag 'category', options_from_collection_for_select(@categories, "id", "name"), :prompt => "Выберите категорию"

    %br

  %br
  .actions
    = f.submit "",  class: "savebtn"
