- if boss? and @project.status < 3
    .panel.panel-info
        .panel-heading Панель Администратора
        .panel-body
            -if @project.status == 1
                =link_to 'Начать голосование',  next_stage_core_project_path(@project), id: 'change_stage'
            -if @project.status == 2
                =link_to 'Вернуться к началу процедуры',  pr_stage_core_project_path(@project), id: 'change_stage'
                %br
                =link_to 'Начать сбор несовершенств',  next_stage_core_project_path(@project), id: 'change_stage'
=render 'shared/journal_news_feed', :journals => @journals, :news => @news
