%div.tab-content
    -@posts.each do |post|
        -post.discontent_aspects.each do |asp|
            %div.tab-pane(id="asp_#{post.id}")
                .col-md-6
                    %section.widget.large
                        %header
                            %h4
                                %span Обсуждение темы:
                                %span=asp.content
                        .body
                            #chat.chat
                                #chat-messages.chat-messages
                                    -post.comments.each do |com|
                                        .chat-message
                                            .sender.pull-left
                                                -#.icon
                                                -#    %img.img-circle{:alt => "", :src => "img/2.jpg"}/
                                                -#.time
                                                -#    4 min
                                            .chat-message-body
                                                %span.arrow
                                                .sender

                                                .text
