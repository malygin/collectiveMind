                                %footer.chat-footer.row
                                    .col-xs-9
                                        %input#new-message.form-control.input-transparent{:placeholder => "Введите ваше сообщение..", :type => "text"}/
                                    .col-xs-3
                                        %button#new-message-btn.btn.btn-transparent.btn-block{:type => "button"} Отправить
                .col-md-6
                    %section.widget.large
                        %header
                            %h4
                                %span База знаний по теме:
                                %span=asp.content
                        .body
                            -@post = Knowbase::Post.min_stage_knowbase_post(@project.id).first
                            =render  :partial => 'knowbase/posts/knowbase_post', :locals => { :post => @post}

