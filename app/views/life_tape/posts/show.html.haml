.wholePost
	.avatar
		= link_to gravatar_for(@life_tape_post.user), @life_tape_post.user
		%br
		%span.role= @life_tape_post.user.role_name
	.posts
		%span.namedate= @life_tape_post.user.name_title
		%br
		=image_tag("tag.png")
		-unless @life_tape_post.category.nil?
			%span.tags= @life_tape_post.category.name
		-else
			%span.tags без категории
		%p 
			= simple_format(@life_tape_post.content)
		.social 
			=link_to "0", "#", class: "counter"
			=image_tag "tree.png"
			=link_to "0", "#", class: "counter"
			=image_tag "like.png"
			=link_to "0", "#", class: "counter"
			=image_tag "dislike.png"
			=link_to @life_tape_post.comments.count, "#", class: "counter"
			=image_tag "comment.png"
- if signed_in?
	.comments
		= form_for @comment, :url => add_comment_life_tape_post_path(@life_tape_post.id), :method => :put do |f|
			=render 'shared/error_messages', :object =>f.object
			%label Ваш комментарий
			.field
				=f.text_area :content
			.action
				=f.submit ''
				
- @life_tape_post.comments.each do |comment|
	.comments
		.avatar
			= link_to gravatar_for(comment.user),comment.user
			%br
			%span.role= comment.user.role_name
		.posts
			%span.namedate= comment.user.name_title
			%br
			%p.comments= comment.content
			.like
				=link_to "0", "#", class: "counter"
				=image_tag "like.png"
	=image_tag "shortdotline.png" , :class => "comments"


