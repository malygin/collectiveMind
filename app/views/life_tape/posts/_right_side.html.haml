- if boss?
    .panel.panel-info
        .panel-heading Панель Администратора
        .panel-body
            -if @project.status == 1
                =link_to 'Начать голосование',  next_stage_core_project_path(@project), id: 'change_stage'
            -if @project.status == 2
                =link_to 'Вернуться к началу процедуры',  pr_stage_core_project_path(@project), id: 'change_stage'
                %br
                =link_to 'Начать сбор недовольств',  next_stage_core_project_path(@project), id: 'change_stage'


= render 'shared/discussed_panel', post_star: @post_star, post_dis: @post_dis

- unless @aspects.empty?
    .panel.panel-default
        .panel-heading Аспекты процедуры
        .panel-body
            .pull-right
                %button.btn.btn-default.btn-sm(onclick="reset_filter_aspects();" ) Сбросить
            = form_tag({:controller => "life_tape/posts", :action=> "index"},{ method: :get, remote: true, id: 'aspects_list' }) do
                - @aspects.each do |asp|
                    .checkbox
                        =  check_box_tag 'aspects_filter[]', asp.id, current_user.discontent_aspects.include?(asp), onclick: "show_filter_aspects_button();", id: "aspect_#{asp.id}"
                        = "#{asp.content} (#{asp.life_tape_posts.count})"
                %button.btn.btn-default.inv_element#filter-aspect(type="submit") Сохранить

/ = render :partial => 'discontent/aspects/aspect', :collection => @aspects










