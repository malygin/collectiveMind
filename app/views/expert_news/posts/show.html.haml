.wholePost

	.posts
		%span.namedate= @post.title
		%br
		%p
			= raw(@post.content)
- if boss?
	= link_to 'Редактировать', edit_expert_news_post_path(@post)
	= link_to 'Удалить', @post, :confirm => 'Уверены, Олег?', :method => :delete


- if signed_in?
	= render :partial => 'shared/comment_form', :locals => { :comment => @comment, :url_link => add_comment_expert_news_post_path(@project, @post.id)}

= render :partial => 'shared/comment',:collection => @post.comments, :locals => { :path_link => '/expert_news/comments/'}

