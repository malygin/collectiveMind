- if signed_in?
  -#- cache @closed_projects do
  - if @closed_projects.present?

    -#%h4
    -#  %strong
    -#    = t('show.project.closed')
    - @closed_projects.each do |project|
      .widget-block-procedure
        .row
          .col-md-1.col-sm-3
            .pull-right
              = image_tag ('md_icon.png')
          .col-md-5.col-sm-5.no-padding
            %h4
              = project.name
          -#%b
          -#  ="(#{project.main_stage} стадия)"
          .col-md-3.col-sm-3.text-center
            .divider3
            %h4
              %i
                = image_tag ('icon_users.png')
              =I18n.t("project_users_count",count: project.users_in_project.count )

          .col-md-3.col-sm-3.text-center
            .divider5
            = link_to current_stage_url(project), class:'btn btn-arrow-red  btn-danger', id: "go_to_closed_project_#{project.id}" do
              = t('link.go_to_project')
      .divider10
  -#- cache @opened_projects do
  - if @opened_projects.present?
    -#%h4
    -#  %strong
    -#    = t('show.project.opened')
    - @opened_projects.each do |project|
      .widget-block-procedure
        .row
          .col-md-1.col-sm-1
            .pull-right
              = image_tag ('md_icon.png')
          .col-md-5.col-sm-5.no-padding
            %h4
              = project.name
          -#%b
          -#  ="(#{project.main_stage} стадия)"
          .col-md-3.col-sm-3.text-center
            .divider3
            %h4
              %i
                = image_tag ('icon_users.png')
              =I18n.t("project_users_count",count: project.users_in_project.count )
          .col-md-3.col-sm-3.text-center
            .divider5
            = link_to current_stage_url(project), class:'btn btn-arrow-red btn-danger', id: "go_to_opened_project_#{project.id}" do
              = t('link.go_to_project')
      .divider10