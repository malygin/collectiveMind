.wholePost
	= render 'users/user_post', :user => post.user
	.posts
		= render 'users/user_name', :user => post.user, :created_at => post.created_at
		
		- if not current_page?(url_for(post)) 
			%p
				= trim_string(post.content)
				= link_to "Подробнее", post, class: "more"
		-else
			%p= post.content
			
		- if post.user == current_user and post.status ==0
			%br
			= link_to 'Редактировать', edit_polymorphic_url(post)
			= link_to 'Отправить в архив', {:action => :destroy, :id => post.id}, :method => :delete, :confirm => 'Точно?'

		= render 'shared/post_social_bar', :post => post

.dotline=image_tag('dotline.png')