%br
.comments
  .row
    .col-md-12
      = form_for comment, html: {class: 'new_or_edit',multipart: true, id: 'comment_form' }, remote: true,  url: url_link, method: :put do |f|
        = render 'shared/notice_messages', object: f.object
        =f.text_area :content, class: 'form-control input-transparent comment-textarea',  placeholder: t('form.comment_answer'), id:"comment_text_area"
        .pull-left.hidden-xs
          = f.file_field :image

        .pull-right
          %div(class="btn-group" data-toggle="buttons" id="change_comment_stat")
            %label(class="btn btn-sm btn-default" id='comment_problem')
              = f.check_box :discontent_status
              =t('show.problem')
            %label(class="btn btn-sm btn-default" id='comment_idea' )
              = f.check_box :concept_status
              =t('show.idea')
            - if advices_for_stage?(@project, @post.class.name.underscore.pluralize)
              %label#label_advice_status(class="btn btn-sm btn-default" onclick="color_button(this);")
                = check_box_tag :advise_status
                = t('show.advice')
          -if @main_comment
            %button.btn.btn-danger.btn-sm(type="button" onclick="reset_child_comment_form(#{@main_comment.id}); return false;" )=t('form.cancel')
          =f.submit t('form.send'), id: "send_post", class: 'btn btn-sm btn-info disabled'

      .text-success#comment_success(style='display:none;')
        =t('form.comment_success')
      .text-success#advice_success_created(style='display:none;')
        = t('discontent.advice_success_created')
