%br
.comments
  .row
    .col-md-12
      = form_for comment, html: {class: 'new_or_edit'}, remote: true, url: url_link, method: :put do |f|
        = render 'shared/notice_messages', object:f.object
        =f.text_area :content, class: 'form-control input-transparent comment-textarea',  placeholder: 'Ваш комментарий или вопрос', id:"comment_text_area"
        .pull-right
          %div(class="btn-group" data-toggle="buttons" id="change_comment_stat")
            %label(class="btn btn-sm btn-default" onclick="color_button(this);")
              = f.check_box :discontent_status
              Проблема
            %label(class="btn btn-sm btn-default" onclick="color_button(this);")
              = f.check_box :concept_status
              Идея
          -if @main_comment
            %button.btn.btn-danger.btn-sm(type="button" onclick="reset_child_comment_form(#{@main_comment.id}); return false;" ) Отменить
          =f.submit 'Отправить', id: "send_post", class: 'btn btn-sm btn-info'

      .text-success#comment_success(style='display:none;')
        Комментарий успешно добавлен





