%br
.comments
    .row
        .col-md-12
            = form_for comment, :html => {:class => 'new_or_edit'}, remote: true, :url => url_link, :method => :put do |f|
                = render 'shared/error_messages', :object =>f.object
                -if comment.get_class == "LifeTape" or comment.get_class == "Concept"
                    =f.text_area :content, :class => 'form-control input-transparent comment-textarea',  placeholder: 'Ваш комментарий', id:"comment_text_area"
                    .pull-right
                        -if @main_comment
                            %button.btn.btn-danger.btn-xs(type="button" onclick="reset_child_comment_form(#{@main_comment.id}); return false;" ) Отменить
                        %div(class="btn-group" data-toggle="buttons" id="change_comment_stat")
                            %label(class="btn btn-sm btn-default" onclick="color_button(this);")
                                = f.check_box :dis_stat
                                Проблема
                            %label(class="btn btn-sm btn-default" onclick="color_button(this);")
                                = f.check_box :con_stat
                                Идея

                        =f.submit 'Отправить', :id  => "send_post", class: 'btn btn-sm btn-info disabled', onclick: 'disable_send_button();'

                -else
                    =f.text_area :content, :class => 'form-control', placeholder: 'Ваш комментарий', id:'comment_text_area'
                    .pull-right
                        -if @main_comment
                            %button.btn.btn-danger.btn-xs(type="button" onclick="reset_child_comment_form(#{@main_comment.id}); return false;" ) Отменить
                        %div(class="btn-group" data-toggle="buttons" id="change_comment_stat")
                            %label(class="btn btn-sm btn-default" onclick="color_button(this);")
                                = f.check_box :dis_stat
                                Проблема
                            %label(class="btn btn-sm btn-default" onclick="color_button(this);")
                                = f.check_box :con_stat
                                Идея
                        =f.submit 'Отправить', :id  => "send_post", class: 'btn btn-sm btn-info disabled', onclick: 'disable_send_button();'


            .text-success#comment_success(style='display:none;')
                Комментарий успешно добавлен





