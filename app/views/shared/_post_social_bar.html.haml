.social 
	- if signed_in? and not post.users.include?(current_user)
		=link_to "#{post.users.count}",  {:action => :plus, :project => @project, :id => post.id}, :id => post.id,:remote => true, :method => :put, class: "counter"
	-else
		=post.users.count
	=image_tag "like.png"
	=link_to post.number_views,  {:action => :show, :project => @project, :id => post.id}, class: "counter"
	=image_tag "views.png"
	=link_to post.comments.count,  {:action => :show, :project => @project, :id => post.id}, class: "counter"
	=image_tag "comment.png"