= form_for comment, :html => {:class => 'new_or_edit'},  remote: true, :url => url_link, :method => :put do |f|
  = render 'shared/error_messages', :object =>f.object
  =f.text_area :content, name: 'content', :class => 'form-control', style: 'height: 70px;', placeholder: 'Ваш комментарий', id:'comment_text_area'
  .pull-right
    =f.submit 'Отправить', :id  => "send_post", class: 'btn btn-sm btn-success', style: 'margin-left: 20px;'
