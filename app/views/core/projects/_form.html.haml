= form_for @project,  :html => { :class => 'new_or_edit' } do |f|
  -if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@core_project.errors.count, "error")} prohibited this core_project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name  
  .field
    = f.label :url_logo
    = f.text_field :url_logo
  .field
    = f.label :desc
    = f.text_area :desc, class: 'redactor'
  .field
    = f.label :knowledge
    = f.text_area :knowledge, class: 'redactor'

  .actions
    = f.submit ''
