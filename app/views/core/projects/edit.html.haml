%h1
  = t('form.project.edit')

.nav-tabs-one
  %ul.nav.nav-tabs
    %li.active
      %a{'data-toggle' => 'tab', href: '#edit_project'} Редактирование процедуры
    - if @project.persisted?
      %li
        %a{'data-toggle' => 'tab', href: '#edit_aspects'} Аспекты
      %li
        %a{'data-toggle' => 'tab', href: '#edit_stages'} Этапы
  .tab-content
    #edit_project.tab-pane.fade.active.in
      = render 'form'
    - if @project.persisted?
      #edit_aspects.tab-pane.fade
        %ul.panel-collapse{id: "aspects_for_#{@project.id}"}
          = link_to 'Добавить аспект', new_core_aspect_path(@project), remote: true, id: "add_aspect_for_#{@project.id}"
          %br
          - @project.aspects.main_aspects.each do |asp1|
            = render partial: 'aspect', locals: {aspect: asp1}

            - if asp1.core_aspects.present?
              %ul.panel-collapse{id: "aspects_for_aspect_#{asp1.id}"}
                - asp1.core_aspects.each do |asp2|
                  = render partial: 'aspect', locals: {aspect: asp2}

      #edit_stages.tab-pane.fade
        .nav-tabs-three
          .nav-tabs-three-sidebar
            %ul.nav
              - (1..5).each do |stage_num|
                %li{class:('active' if @project.current_stage?(stage_num))}
                  %a{'data-toggle' => 'tab', href: "#stage-#{stage_num}"}
                    = "Этап #{stage_num}"
          .nav-tabs-three-content
            .tab-content
              .text-success#settings_success_update(style='display:none;')
                = t 'project_settings.success_update'
              - (1..5).each do |stage_num|
                .tab-pane.fade{id: "stage-#{stage_num}", class:('active in' if @project.current_stage?(stage_num))}
                  %h4
                    = Core::Project::LIST_STAGES[stage_num][:name]
                  - Core::Project::LIST_STAGES[stage_num][:status].each do |status|
                    - if @project.status == status
                      - if @project.prev_status
                        = link_to t("menu.settings.admin_set_#{@project.status * 2 - 2}"), pr_stage_core_project_path(@project), method: :put, id: "down_to_#{@project.prev_status}"
                        %br
                      - if @project.next_status
                        = link_to t("menu.settings.admin_set_#{@project.status * 2 - 1}"), next_stage_core_project_path(@project), method: :put, id: "up_to_#{@project.next_status}"
                    %h5
                      = Core::Project.status_title(status)
                    = form_for @project.settings, remote: true do |f|
                      .form-group
                        = f.label 'Предполагаемая дата начала'
                        = text_field_tag "stage_dates[#{status}][expected][start]", @project.settings.stage_dates[status.to_s]['expected']['start'], class: 'form-control datepicker'
                      .form-group
                        = f.label 'Предполагаемая дата окончания'
                        = text_field_tag "stage_dates[#{status}][expected][end]", @project.settings.stage_dates[status.to_s]['expected']['end'], class: 'form-control datepicker'
                      %actions.pull-right
                        = f.submit 'Сохранить'
          .clearfix

