-if @project
  %h4=link_to " << Вернуться к процедуре", "/project/#{@project.id}"
.col-md-12
  %section
    %header
      %h3.text-center=t('menu.analytics')
      #nvd3_project(data-project="#{@project.id if @project}" data-stage="#{params[:action]}")
    .body
      -if @project
        -#%h3 График посещаемость
        -#%section.widget.large
        -#  %header
        -#    %h4
        -#      %i.fa.fa-arrow-circle-o-right
        -#      Нововведения
        -#  #sources-chart-line.body.chart
        -#    %svg
        -#%br
        -#%br
        %h3 График контент
        %section.widget.large
          %header
            %h4
              %i.fa.fa-bar-chart-o
              Несовершенства
              %small.hidden-xs{:style => "display: inline !important;"} Комментарии и Контент
          #sources-chart-bar.body.chart
            %svg
        %br
        %br
        %h3 Комментарии
        %table.table.table-striped.table-bordered
          %thead
            %tr
              %th
                Тип комментария
              %th
                Кол-во постов

          %tbody
            %tr
              %th
                Всего комментариев
              %td
                =@project.discontent_comments.count
            %tr
              %td
                Комментарии без пометок
              %td
                =@project.discontent_comments.not_check.count
            %tr
              %td
                Проблема
              %td
                =@project.discontent_comments.type_status("by_discontent").count
            %tr
              %td
                Идея
              %td
                =@project.discontent_comments.type_status("by_concept").count
            %tr
              %td
                Проблема + Идея
              %td
                =@project.discontent_comments.problem_idea.count
            %tr
              %td
                Требует Обсуждения
              %td
                =@project.discontent_comments.type_status('by_discuss').count
            %tr
              %td
                Важное
              %td
                =@project.discontent_comments.type_status('by_approve').count
            %tr
              %td
                Требует Обсуждения + Важное
              %td
                =@project.discontent_comments.discuss_approve.count
            %tr
              %td
                Отмечены лайками
              %td
                =@project.discontent_comments.type_like.count

        %br
        %br
        %h3 Несовершенства
        %table.table.table-striped.table-bordered
          %thead
            %tr
              %th
                Тип несовершенств
              %th
                Все несовершенства
              %th
                Имеющиеся недостатки
              %th
                Отсутствующие достоинства
          %tbody
            -if @project
              %tr
                %td
                  Все Аспекты
                %td
                  =@project.discontents.by_status(@project.status > 4 ? 1 : 0).count
                %td
                  =@project.discontents.by_status(@project.status > 4 ? 1 : 0).by_style(1).count
                %td
                  =@project.discontents.by_status(@project.status > 4 ? 1 : 0).by_style(0).count

              -@project.proc_aspects.order(:id).each do |asp|
                %tr
                  %td
                    =asp.content
                  %td
                    =asp.aspect_discontent.by_status(@project.status > 4 ? 1 : 0).uniq.count
                  %td
                    =asp.aspect_discontent.by_status(@project.status > 4 ? 1 : 0).by_style(1).uniq.count
                  %td
                    =asp.aspect_discontent.by_status(@project.status > 4 ? 1 : 0).by_style(0).uniq.count

