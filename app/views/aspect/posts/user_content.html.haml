- @content.each do |post_short|
  .post_full
    .post_block
      .post_body
        .post_poster
          = link_to user_path(@project, post_short.user) do
            = user_image_tag post_short.user.try(:avatar), class: 'img-circle img40'
          = link_to post_short.user, user_path(@project, post_short.user)
          %p.time
            = Russian::strftime(post_short.created_at, '%d.%m.%Y')
        .post_content
          .what
            = post_short.content
            - if current_user?(post_short.user) && can_edit_content?
              %span.right_icon
                = link_to edit_aspect_post_path(@project, post_short), id: "edit_aspect_#{post_short.id}" do
                  %i.glyphicon.glyphicon-pencil
                = link_to aspect_post_path(@project, post_short), method: :delete, data: { confirm: t('confirm.delete_aspect') },
                              id: "destroy_aspect_#{post_short.id}" do
                  %i.glyphicon.glyphicon-trash
          .about
            = link_to aspect_post_path(@project, post_short), remote: true, class: 'a_font_reset', id: "show_aspect_#{post_short.id}" do
              = post_short.short_desc
              %span.right_icon
                %i.fa.fa-angle-right
      .post_footer
