.container.padding30
  .row
    - @user_voter.content_for_vote(@project, status).each do |post_vote|
      .col-sm-6.vote_item_cont{id: "post_vote_#{post_vote.id}"}
        .vote_item.color_me(data-me-type="aspect" data-me-action="border-top-color" data-me-color="#{post_vote.id % 13}")
          .heading_cont
            %h6
              = post_vote.content
          .divider10
          .vote_controls.text-center
            - @project.vote_folders.each do |num_folder, folder|
              -if num_folder > 0
                %button.btn.vote_button{data: {project: @project.id, id: post_vote.id, status: num_folder, stage: @project.current_stage_title}, class: "#{'voted' if status == num_folder}",
                "data-icon-class" => "fa-exclamation", "data-vote-role" => "#{folder[:role]}", :role => "button", "data-placement" => "bottom", "data-toggle" => "tooltip", :title => "Отнести к необходимым"}
                  %i.vote{class: "vote-vote#{num_folder}"}

