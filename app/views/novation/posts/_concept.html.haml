.panel-table.item{ class: "item_#{concept.id}", 'data-id' => concept.id }
  .panel-heading
    .cell
      .check
        %input.check_push_box{ type: 'checkbox', id: "check_#{concept.id}", 'data-item' => ".item_#{concept.id}", class: "checkbox_#{concept.id}" }/
        %label{ for: "check_#{concept.id}", id: "set_check_#{concept.id}" }
          %i.fa.fa-check
    .cell
      %a.with_arrow.collapsed{ 'data-toggle' => 'collapse', href: ".concept_show_#{concept.id}" }
        = concept.title
        .pull-right
          %i.fa.fa-angle-right.fa-lg.collapse_arrow
  .collapse{ class: "concept_show_#{concept.id}" }
    .description
      %b
        = t('activerecord.attributes.concept/post.goal')
      %p
        = concept.goal
      %b
        = t('activerecord.attributes.concept/post.content')
      %p
        = concept.content
