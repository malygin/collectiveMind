.divider10
.content_window.white
  = form_for @novation, url: {project: @project.id, action: @novation.persisted? ? 'update' : 'create', id: @novation.id}, remote: true, class: 'cabinet-aspect-form' do |f|
    %div{id: "novation_notices_#{@novation.id}"}
      = render partial: 'shared/create_success', locals: {model_name: 'novation', id: @novation.id}
    .cont_heading.bold
      = f.text_area :title, rows: 1, class: 'form-control transp_ta', placeholder: t('activerecord.attributes.novation/post.title')
    .divider25
    .row
      #for_hidden_fields
      .col-md-7
        - @novation.attributes_for_form.each do |type_attribute|
          %a.a_font_reset.collapser_type2.collapsed{'aria-expanded' => 'false', 'data-toggle' => 'collapse', href: "#cab4-#{type_attribute.first}"}
            = t("activerecord.attributes.novation/post.#{type_attribute.first}")
          .collapse{id: "cab4-#{type_attribute.first}"}
            .divider5
            - type_attribute.second.each do |attribute|
              %h6.bold
                = t("activerecord.attributes.novation/post.#{attribute}")
              = f.radio_button "#{attribute}_bool".to_sym, 'Да'
              = f.radio_button "#{attribute}_bool".to_sym, 'Нет'
              = f.text_area attribute.to_sym, class: 'form-control ta_icon', rows: 3
              .divider15

      .col-md-5
        %h6.bold.open-popup.cab_modal_opnr{"data-placement" => "cabinet4", "data-target" => "1"} Выберите идеи
        .divider_1_grey
        .divider20
        - if @novation.persisted?
          - @novation.novation_concepts.each do |concept|
            %p.bold
              = concept.title
    .divider50
    .divider_1_grey
    .divider20
    = f.submit t("form.#{action_name}"), id: 'send_post_novation', class: 'btn add-button type2 pull-right'
    - if @novation.persisted? and !@novation.published?
      = link_to 'Опубликовать', publish_novation_post_path(@project, @novation), remote: true, method: :put, id: "publish_novation_#{@novation.id}", class: 'btn add-button type2 pull-right'
    - if @novation.persisted?
      = link_to 'Удалить', novation_post_path(@project, @novation), method: :delete, data: {confirm: t('confirm.delete_novation')}, id: "destroy_novation_#{@novation.id}", class: 'btn add-button type2 del pull-right'
