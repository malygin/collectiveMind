.container.padding30
  .row
    - @user_voter.content_for_vote(@project, status).each do |post_vote|
      .col-sm-4.vote_item_cont.item_expandable.h_2{id: "post_vote_#{post_vote.id}"}
        .vote_item.themes_cont
          .heading_cont.blackonwhite
            %h6
              = trim_content(post_vote.title, 50)
          %p
            = post_vote.content

          .post-theme{id: "stripe#{post_vote.id}"}
            - post_vote.novation_concepts.each_with_index do |post, index|
              %span.tag-stripes.color_me{class: "#{'active' if index == 0}", "data-me-action" => "background-color", "data-me-color" => "#{index+1}", "data-me-type" => "imperf"}
                %span.tags
                  = trim_content(post.title, 30)

          .divider15
          .vote_controls.text-center
            - @project.vote_folders.each do |num_folder, folder|
              -if num_folder > 0
                %button.btn.b_vote.vote_button{data: {project: @project.id, id: post_vote.id, status: num_folder, stage: @project.current_stage_title}, class: "#{'voted ' if status == num_folder}v_btn_#{num_folder+1}",
                "data-icon-class" => "fa-check", "data-vote-role" => "#{status == num_folder ? 'all' : folder[:role]}", "data-vote-default-role" => "#{folder[:role]}", :role => "button", :role => "button",
                'data-placement' => 'bottom', 'data-toggle' => 'tooltip', title: t("vote.#{@project.current_stage_type}.#{folder[:role]}.title_button").html_safe}

            -#%span.vote_open_detail.grey
            -#  %i.fa.fa-angle-right.font_white
            .divider15

  .divider50