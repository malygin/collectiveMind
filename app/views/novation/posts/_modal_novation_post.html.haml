  .popup.popup_rounded.popup_color_theme_stage4
    .modal_title
      .row
        .col-md-8
          %h4.bold.font_dark_grey
            =trim_content(@post.title)
        .col-md-4
          .row
            .col-md-12
              .text-right.post_likes
                %span.bold
                  %span(class="cc_post_#{@post.id}")
                    = @post.comments.count
                  %i.fa.fa-comment.theme_font_color
                = link_to({controller: @post.class.name.underscore.pluralize ,action: :like, project: @project, id: @post.id, against: false}, remote: true, method: :put, id: "like_post_#{@post.id}") do
                  %span.bold
                    %span(id="lk_post_#{@post.id}" class="lk_post_#{@post.id}")
                      = @post.users_pro.count
                    %i.fa.fa-thumbs-up.theme_font_color
                = link_to({controller: @post.class.name.underscore.pluralize, action: :like, project: @project,  id: @post.id, against: true}, remote: true, method: :put, id: "dislike_post_#{@post.id}") do
                  %span.bold
                    %span(id="dlk_post_#{@post.id}" class="dlk_post_#{@post.id}")
                      = @post.users_against.count
                    %i.fa.fa-thumbs-down.theme_font_color
                - if @post.notes.present?
                  %span
                    %i.fa.fa-exclamation-triangle.font_lighter_grey
                %small
                  = Russian::strftime(@post.created_at, '%d.%m.%Y')
                - if boss? or role_expert? or stat_expert?
                  = link_to({controller: @post.class.name.underscore.pluralize, action: :discuss_status, id: @post.id, approve_status: 1}, remote: true, method: :put, class: "link_status", id: "approve_stat_post_#{@post.id}") do
                    %span.label_approve.label(class="#{label_approve_stat(@post)}")
                      = t('show.important')
                - elsif @post.approve_status
                  %span.label.label-success=t('show.important')
    .modal_body
      .poster-line.line-grey
        %span.tags_badge идеи
        .row
          .col-md-6
            .innov-poster-cont
              -#=image_tag 'no-ava.png', class: 'img-circle'
              = cl_image_tag @post.user.try(:avatar), class: 'img-circle img50'
              %span.poster-name
                = @post.user
          .col-md-6.col_padding_right_0
            .innov-tags
              - @post.novation_concepts.each_with_index do |post, index|
                .innov-tags-tag.popup_tooltip.color_me{class: "tooltip3_tag_#{index + 1}", "data-me-action" => "background-color", "data-me-color" => "#{index+1}", "data-me-type" => "imperf"}
                  = trim_content(post.title, 50)

