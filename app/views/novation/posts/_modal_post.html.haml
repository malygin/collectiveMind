.modal.fade#modal-post
  .modal-dialog.modal-lg
    .modal-content
      - if boss?
        .post-top-header
          = link_to({ controller: @post.class.name.underscore.pluralize, action: :add_score, project: @project.id, id: @post.id },
          remote: true, method: :put, class: "btn btn-white btn-xs link_status #{'theme_font_color' if @post.useful}", id: "plus_post_#{@post.id}") do
            %i.fa.fa-trophy.fa-lg
          = link_to({ controller: @post.class.name.underscore.pluralize, action: :change_status, project: @project.id, id: @post.id, approve_status: true },
          remote: true, method: :put, class: "btn btn-white btn-xs link_status #{'theme_font_color' if @post.approve_status}", id: "approve_status_post_#{@post.id}") do
            %i.fa.fa-bookmark.fa-lg
      .popup.popup_rounded.popup_color_theme_stage4
        %div{ 'data-important' => "#{@post.id}", class: "#{'hide' unless @post.approve_status}" }
          .important.theme_font_color
            %i.fa.fa-bookmark.fa-2x
        .modal_title
          .row
            .col-md-8
              %h4.bold.font_dark_grey
                = @post.title.present? ? trim_content(@post.title) : 'Пакет без названия'
            .col-md-4
              .row
                .col-md-12
                  .text-right.post_likes
                    %span.bold
                      %span{ class: "cc_post_#{@post.id}" }
                        = @post.comments.count
                      %i.fa.fa-comment.theme_font_color
                    = link_to({ controller: @post.class.name.underscore.pluralize, action: :like, project: @project, id: @post.id, against: false },
                    remote: true, method: :put, id: "like_post_#{@post.id}", 'data-placement' => 'bottom', 'data-toggle' => 'tooltip', title: 'Нравится') do
                      %span.bold
                        %span{ id: "lk_post_#{@post.id}", class: "lk_post_#{@post.id}" }
                          = @post.users_pro.count
                        %i.fa.fa-thumbs-up.theme_font_color
                    = link_to({ controller: @post.class.name.underscore.pluralize, action: :like, project: @project,  id: @post.id, against: true },
                    remote: true, method: :put, id: "dislike_post_#{@post.id}", 'data-placement' => 'bottom', 'data-toggle' => 'tooltip', title: 'Не нравится') do
                      %span.bold
                        %span{ id: "dlk_post_#{@post.id}", class: "dlk_post_#{@post.id}" }
                          = @post.users_against.count
                        %i.fa.fa-thumbs-down.theme_font_color
                    -#- if @post.notes.present?
                    -#  %span
                    -#    %i.fa.fa-exclamation-triangle.font_lighter_grey
                    %small
                      = Russian::strftime(@post.created_at, '%d.%m.%Y')
        .modal_body
          .poster-line.line-grey
            %span.tags_badge идеи
            .row
              .col-md-6
                .innov-poster-cont
                  -#= image_tag 'no-ava.png', class: 'img-circle'
                  = link_to user_path(@project, @post.user) do
                    = user_image_tag @post.user.try(:avatar), class: 'img-circle img50'
                  %span.poster-name
                    = link_to @post.user, user_path(@project, @post.user)
              .col-md-6.col_padding_right_0
                .innov-tags
                  - @post.novation_concepts.each_with_index do |post, index|
                    .innov-tags-tag.popup_tooltip.color_me{ class: "tooltip3_tag_#{index + 1}", 'data-me-action' => 'background-color',
                    'data-me-color' => "#{index + 1}", 'data-me-type' => 'imperf' }
                      = trim_content(post.title, 50)

          .container.modal_content
            .row
              .col-md-6.exp_col.left
                %button.btn.btn_reset.exp_button.pull-right
                  = image_tag 'grey_arrow.png'
                .divider25
                %a.a_font_reset.collapser_type2.with_plus.collapsed{ 'data-toggle' => 'collapse', href: '#cab4-1', 'aria-expanded' => 'false' }
                  = t('activerecord.attributes.novation/post.project')
                  %i.fa.fa-plus.font_color_stage4.collapse_plus
                .collapse#cab4-1
                  .divider5
                  %h5.bold= t('activerecord.attributes.novation/post.project_change')
                  %p
                    = @post.project_change
                  .divider15

                  %h5.bold= t('activerecord.attributes.novation/post.project_goal')
                  %p
                    = @post.project_goal
                  .divider15
                  %h5.bold=  t('activerecord.attributes.novation/post.project_members')
                  %p
                    = @post.project_members
                  .divider15
                  %h5.bold= t('activerecord.attributes.novation/post.project_results')
                  %p
                    = @post.project_results
                  .divider15

                  %h5.bold= t('activerecord.attributes.novation/post.project_time')
                  %p
                    = @post.project_time
                  .divider15
                %a.a_font_reset.collapser_type2.with_plus.collapsed{ 'data-toggle' => 'collapse', href: '#cab4-2', 'aria-expanded' => 'false' }
                  = t('activerecord.attributes.novation/post.members')
                  %i.fa.fa-plus.font_color_stage4.collapse_plus
                .collapse#cab4-2
                  .divider5
                  %h5.bold= t('activerecord.attributes.novation/post.members_new')
                  %p
                    = @post.members_new_bool ? 'Да' : 'Нет'
                    %br
                    = @post.members_new
                  .divider15

                  %h5.bold= t('activerecord.attributes.novation/post.members_who')
                  %p
                    = @post.members_who

                  .divider15
                  %h5.bold= t('activerecord.attributes.novation/post.members_education')
                  %p
                    = @post.members_education_bool ? 'Да' : 'Нет'
                    %br
                    = @post.members_education

                  .divider15
                  %h5.bold= t('activerecord.attributes.novation/post.members_motivation')
                  %p
                    = @post.members_motivation_bool ? 'Да' : 'Нет'
                    %br
                    = @post.members_motivation

                  .divider15
                  %h5.bold= t('activerecord.attributes.novation/post.members_execute')
                  %p
                    = @post.members_execute
                  .divider15

                %a.a_font_reset.collapser_type2.with_plus.collapsed{ 'data-toggle' => 'collapse', href: '#cab4-3', 'aria-expanded' => 'false' }
                  = t('activerecord.attributes.novation/post.resource')
                  %i.fa.fa-plus.font_color_stage4.collapse_plus
                .collapse#cab4-3
                  .divider5
                  %h5.bold= t('activerecord.attributes.novation/post.resource_commands')
                  %p
                    %strong
                      = t('activerecord.attributes.novation/post.resource_commands')
                  %p
                    = @post.resource_commands_bool ? 'Да' : 'Нет'
                    %br
                    = @post.resource_commands

                  .divider15
                  %h5.bold= t('activerecord.attributes.novation/post.resource_support')
                  %p
                    = @post.resource_support_bool ? 'Да' : 'Нет'
                    %br
                    = @post.resource_support
                  .divider15

                  %h5.bold= t('activerecord.attributes.novation/post.resource_internal')
                  %p
                    = @post.resource_internal

                  .divider15
                  %h5.bold= t('activerecord.attributes.novation/post.resource_external')
                  %p
                    = @post.resource_external

                  .divider15
                  %h5.bold= t('activerecord.attributes.novation/post.resource_financial')
                  %p

                    = @post.resource_financial

                  .divider15
                  %h5.bold=  t('activerecord.attributes.novation/post.resource_competition')
                  %p
                    = @post.resource_competition_bool ? 'Да' : 'Нет'
                    %br
                    = @post.resource_competition
                  .divider15

                %a.a_font_reset.collapser_type2.with_plus.collapsed{ 'data-toggle' => 'collapse', href: '#cab4-4', 'aria-expanded' => 'false' }
                  = t('activerecord.attributes.novation/post.confidence')
                  %i.fa.fa-plus.font_color_stage4.collapse_plus
                .collapse#cab4-4
                  .divider5

                  %h5.bold= t('activerecord.attributes.novation/post.confidence_commands')
                  %p
                    = @post.confidence_commands_bool ? 'Да' : 'Нет'
                    %br
                    = @post.confidence_commands
                  .divider15
                  %h5.bold= t('activerecord.attributes.novation/post.confidence_remove_discontent')
                  %p
                    = @post.confidence_remove_discontent_bool ? 'Да' : 'Нет'
                    %br
                    = @post.confidence_remove_discontent
                  .divider15
                  %h5.bold= t('activerecord.attributes.novation/post.confidence_negative_results')
                  %p
                    = @post.confidence_negative_results_bool ? 'Да' : 'Нет'
                    %br
                    = @post.confidence_negative_results
                  .divider15

                = render partial: 'shared/content_question', collection: @questions

              .col-md-6.exp_col.right
                %button.btn.btn_reset.exp_button.pull-left
                  = image_tag 'grey_arrow_1.png'
                .divider10

                .separator
                  %hr
                    .separator_label.text-left
                      %h4 Обсуждение результатов опроса
                    .separator_label.pull-right
                      %a.theme_font_color{ class: "#{'font_grey' if @comments.count == 0}", 'aria-expanded' => 'false', 'data-toggle' => 'collapse', href: '#comments' }
                        %span.comments_action свернуть
                .chat-messages.collapse.in#comments
                  = render partial: 'shared/comment', collection: @comments
                .divider15
                = render partial: 'shared/comment_form', locals: { comment: @comment, post: @post,
                url_link: url_for(controller: @post.class.name.underscore.pluralize, action: 'add_comment') }

          .divider25

