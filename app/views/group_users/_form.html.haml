= form_for @group_user do |f|
  - if @group_user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group_user.errors.count, "error")} prohibited this group_user from being saved:"
      %ul
        - @group_user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :group
    = f.text_field :group
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
