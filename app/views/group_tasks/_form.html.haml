= form_for @group_task do |f|
  - if @group_task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group_task.errors.count, "error")} prohibited this group_task from being saved:"
      %ul
        - @group_task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :group
    = f.text_field :group
  .actions
    = f.submit 'Save'
