%br
.comments
  .row
    .col-md-12
      = form_for @advice_comment, html: {class: 'new_or_edit'}, remote: true, url: discontent_advice_comments_path(@project, @advice) do |f|
        = render 'shared/notice_messages', object: f.object
        = f.text_area :content, class: 'form-control input-transparent comment-textarea', placeholder: t('form.comment_answer'), id:'comment_text_area'
        .pull-right
          = f.submit t('form.send'), id: 'send_comment', class: 'btn btn-sm btn-info'

      .text-success#comment_success(style='display:none;')
        = t('form.comment_success')
