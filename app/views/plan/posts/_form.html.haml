.divider10
- if @post.persisted?
  .content_window.c_w_5_top.bottom_panel_stop
    .cont_heading.bold
      %span.pocket_name.breadcr
        = link_to user_content_plan_posts_path(@project), class: 'a_font_reset bold' do
          Мои пакеты
          %small &gt;
      %textarea#t_textarea1.form-control.transp_ta{placeholder: "название пакета", rows: "1", type: "text"}
- else
  .content_window.bottom_panel_stop
    %a.cont_heading.a_font_reset.bold.pocket_name.open-popup{'data-placement' => 'cabinet5', 'data-target' => '1'} Выбрать пакет
%div{id: "plan_notices_#{@post.id}"}
  = render partial: 'shared/create_success', locals: {model_name: 'novation', id: @post.id}
.content_window.white.c_w_5
  .cont_heading
    %button.btn.btn_cab_mod.type2.btn_toggle.btn_reset.active Описание проектного предложения
  .divider10
  .row
    .col-md-4
      %ul.list-unstyled.tabs_type_2{role: 'tablist'}
        %li{role: 'presentation'}
          %a.a_font_reset{'data-toggle' => 'tab', href: '#cabinet_5_cont_1', role: 'tab'} Описание проекта
        %li{role: 'presentation'}
          %a.a_font_reset{'data-toggle' => 'tab', href: '#cabinet_5_cont_2', role: 'tab'} Организационные риски
        %li{role: 'presentation'}
          %a.a_font_reset{'data-toggle' => 'tab', href: '#cabinet_5_cont_3', role: 'tab'} Ресурсные риски
        %li{role: 'presentation'}
          %a.a_font_reset{'data-toggle' => 'tab', href: '#cabinet_5_cont_4', role: 'tab'} Риски реализации
    .col-md-8
      .tab-content.tab_cont5.ps_cont
        #cabinet_5_cont_0.tab-pane.active.fade.in{role: 'tabpanel'}
          .divider35
          .text-center
            = image_tag 'cab_5_qsign.png'
            .divider35
            %p.cab5_placeholder
              Здесь вы ответите на вопросы по пунктам слева,
              %br/
              для этого нажмите на одну из панелей, или знак вопроса
          .divider70
        #cabinet_5_cont_1.tab-pane.fade{role: 'tabpanel'}
          %h6.bold Цели и ожидаемые результаты
          %textarea.form-control{rows: '5', type: 'text'}
          .divider15
          %h6.bold Краткое описание Проекта (усовершенствования)
          %textarea.form-control{rows: '5', type: 'text'}
          .divider15
          %h6.bold Краткое описание Проекта (усовершенствования)
          %textarea.form-control{rows: '5', type: 'text'}
          .divider25
        #cabinet_5_cont_2.tab-pane.fade{role: 'tabpanel'}
        #cabinet_5_cont_3.tab-pane.fade{role: 'tabpanel'}
        #cabinet_5_cont_4.tab-pane.fade{role: 'tabpanel'}
  - if @post.published?
    = image_tag 'published.png', class: 'publish'
.divider70

%div
  #popup-cabinet5-1.popup-window.detailed_popup.popup-w1030.mfp-hide
    .content_window.white
      .cont_heading
        %button.btn.btn_cab_mod.type2.btn_toggle.btn_reset.active Выбор пакета
      .divider15
      .row
        .col-md-5
          %ul.list-unstyled.tabs_type_2.less_margin{role: "tablist"}
            - @novations.each_with_index do |novation, index|
              %li{role: 'presentation', class: ('active' if index == 0)}
                %a.a_font_reset{'data-toggle' => 'tab', href: "#show_novation_#{novation.id}", role: 'tab'}
                  = novation.title
        .col-md-7
          .tab-content
            .divider3
            - @novations.each_with_index do |novation, index|
              .tab-pane.fade{role: 'tabpanel', id: "show_novation_#{novation.id}", class: ('in active' if index == 0)}
                - novation.attributes_for_form.each do |type_attribute|
                  %a.a_font_reset.collapser_type2.collapsed.stage4_pale_back{'aria-expanded' => 'false', 'data-toggle' => 'collapse', href: "#novation_#{novation.id}_attributes_#{type_attribute.first}"}
                    = t("activerecord.attributes.novation/post.#{type_attribute.first}")
                  .collapse{id: "novation_#{novation.id}_attributes_#{type_attribute.first}"}
                    .divider5
                    - type_attribute.second.each do |attribute, bool_attribute|
                      %h6.bold
                        = t("activerecord.attributes.novation/post.#{attribute}")
                      %textarea.form-control{rows: '3', value: novation.send(attribute)}
                      .divider15
