.stage-info-sort-block
  .row
    %br/
    .col-md-6
      %span.stage-heading
        Проектные предложения
        %span#count_plans
          ="(#{@posts.count})"
    .col-md-6
      .sort-block.pull-right
        %span.sort-label Сортировать по новым:
        %span#sorter
          %span.sort-1.sort_btn.sprite.sprite-1_5.sort-comment{data: {name: 'sort', desc: 0, type: 'comment'}}
            - new_comments = @project.plans_approved.after_last_visit_comments(last_time_visit_page('plan')).size
            - if new_comments > 0
              %span.badge-red
                = new_comments
          %span#tooltip3_2.sort-2.sort_btn.sprite.sprite-2_5.tooltip1.sort-date.active{data: {name: 'sort', desc: 0, type: 'date'}, "data-placement" => "bottom", "data-toggle" => "tooltip", "data-trigger" => "manual", :title => "При помощи этих фильтров вы можете выбирать, в каком порядке будут отображаться проектные предложения."}
            - new_posts = @project.plans_approved.after_last_visit_posts(last_time_visit_page('plan')).size
            - if new_posts > 0
              %span.badge-red
                = new_posts

        - if @project.stage == '5:0'
          = link_to new_novation_post_path(@project, type_mechanic: 'simple'), id: 'new_plan_posts' do
            %button.btn.add-button
              %span
                = t 'techniques.plan_posts_simple'


.stage-post-block
  .row#tab_novation_plans
    = render partial: 'post_short', collection: @posts





- if shown_intro('plan_intro') == ''
  = render partial: 'popup_welcome'

