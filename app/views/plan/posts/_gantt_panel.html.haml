.gantt_panel#bottom-panel
  .container
    .row
      .col-md-10.col-md-offset-2
        .content_window
          .cont_heading
            %button.btn-gantt Добавление задач в проектное предложение
            %button.btn-icon-gantt#bottom-opener
              %i.fa.fa-arrow-up
          #workSpace{ style: 'width:900px;' }
          .noprint#taZone{ style: 'display:none;' }
            - if @post.persisted?
              %textarea#ta{ cols: '150', rows: '8' }
                = @post.tasks_gant.to_json.try(:html_safe)
            - else
              %textarea#ta{ cols: '150', rows: '8' }
                :preserve
                       { "tasks":[
                       { "id":-1, "name": "Проектное предложение", "code": "", "level": 0, "status": "STATUS_ACTIVE", "canWrite":true, "start":1396994400000,
                       "duration":21, "end":1399672799999, "startIsMilestone":true, "endIsMilestone":false, "collapsed":false, "assigs":[], "hasChild":true }

                  ], "selectedRow":0, "canWrite":true, "canWriteOnParent":true }

= render 'shared/gantt_template'
