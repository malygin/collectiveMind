$('#modal_action').empty();
-unless @view_concept
  $('#modal_action').html("#{escape_javascript(render partial: 'modal_new_action', locals: { action: @post_action })}");
  autocomplete_initialized();
-else
  $('#modal_concept_action').html("#{escape_javascript(render partial: 'modal_new_action', locals: { action: @post_action })}");
  autocomplete_initialized();
$('#modal_new_action').modal('show');

-if @post_stage
  activate_datepicker_action("#{@post_stage.date_begin}","#{@post_stage.date_end}");
-else
  activate_datepicker_action();