%hr
%h4.color-orange.text-center
  %b B1.
  =t('form.cond')
.form-group.has-success= display_content(post_concept_show.positive)

%h4.color-orange.text-center
  %b B2.
  =t('form.cond_res')
%br
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th
        ="#"
      %th
        Название
      %th
        Пояснение
  %tbody
    - post_concept_show.plan_post_resources.by_type('positive_r').each_with_index do |r, index|
      %tr
        %td
          =index+1
        %td
          =r.name
        %td
          =r.desc

