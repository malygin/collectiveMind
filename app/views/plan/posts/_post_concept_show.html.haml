%h3.color-orange.text-center
  %b=post_concept_show.title
  %br
  %br
%h4.color-orange.text-center
  %b A1.
  =t('form.novation_what')
.form-group
  =simple_format(post_concept_show.name)

%h4.color-orange.text-center
  %b A2.
  =t('form.novation_how')
.form-group.has-danger
  =simple_format(post_concept_show.content)

%hr
%h4.color-orange.text-center
  %b B1.
  =t('form.cond')
.form-group.has-success= display_content(post_concept_show.positive)

%h4.color-orange.text-center
  %b B2.
  =t('form.cond_res')
- post_concept_show.plan_post_resources.by_type('positive_r').each do |r|
