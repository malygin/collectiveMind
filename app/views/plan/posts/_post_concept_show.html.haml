%br
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th
        ="#"
      %th
        =t('show.concept.name_res')
      %th
        =t('show.concept.desc_res')
  %tbody
    - post_concept_show.plan_post_resources.by_type('positive_r').each_with_index do |r, index|
      %tr
        %td
          =index+1
        %td
          =r.name
        %td
          =r.desc
      - r.plan_post_resources.by_type('positive_s').each_with_index  do |res, ind|
        %tr
          %td
            ="#{index+1}.#{ind+1}"
          %td
            =res.name
          %td
            =res.desc
