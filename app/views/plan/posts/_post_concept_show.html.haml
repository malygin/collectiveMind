  %br

%h4.color-orange.text-center
  %b A1.
  =t('form.concept.novation_what')
  -if boss? and @project.status == 9
    =link_to({controller: 'plan/posts', action: :new_note, id: @post.id, con_id:post_concept_show.id, type_field: 1},remote: true,method: :put, id: "btn_note_1", class: "note_text") do
      .label.label-danger=t('show.note')
.form-group
