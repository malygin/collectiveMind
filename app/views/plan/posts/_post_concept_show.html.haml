%h3.color-orange.text-center
  %b=post_concept_show.title
  %br
  %br
%h4.color-orange.text-center
  %b A1.
  =t('form.novation_what')
.form-group
  =simple_format(post_concept_show.name)

%h4.color-orange.text-center
  %b A2.
  =t('form.novation_how')
.form-group.has-danger
