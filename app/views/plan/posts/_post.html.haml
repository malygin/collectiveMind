.col-lg-6.box-shadow-outer{id: "post_#{post.id}"}
  .project-single.rounded-3
    .row.post-header
      .col-xs-8
        %span.post-header-text.color.mass-red
          = post.name
      .col-xs-4.post-header-date
        %span
          = Russian::strftime(post.created_at, '%d.%m.%Y')
    .post-center-block
      .post-poster
        -#@todo заменить на аватарку юзера
        = image_tag 'ava1.jpg'
        .clearfix
        %span.poster-name
          = post.user
      %a.post-text.open-popup-link{href: "#popup-project_#{post.id}"}
        .text-arrow.pull-right
        %span
          = simple_format(post.goal)
    .project-bottom
      %span.popup-comments
        (+5)
        %i.fa.fa-comment-o
      %span.popup-likes
        (+9)
        %i.fa.fa-thumbs-o-up
      %span.popup-dislikes
        (+1)
        %i.fa.fa-thumbs-o-down

.popup-project.popup-window.info-popup.mfp-hide{id: "popup-project_#{post.id}"}
  .popup.popup-top-rounded
    .popup-post-info
      .popup-header.popup-top-rounded
        %h2.color.mass-red
          = post.name
      .clearfix
      .row.info-block
        .col-lg-4.popup-post-block
          -#@todo заменить на аватарку юзера
          = image_tag 'ava1.jpg'
          %span
            = post.user
          .info-stripe
            %span.popup-date
              = Russian::strftime(post.created_at, '%d.%m.%Y')
            %span.popup-comments
              +5
              %i.fa.fa-comment-o
            %span.popup-likes
              +9
              %i.fa.fa-thumbs-o-up
            %span.popup-dislikes
              +1
              %i.fa.fa-thumbs-o-down
        .col-lg-8.popup-right-tabs
          .nav-tabs-one
            %ul.nav.nav-tabs
              %li.active
                %a{'data-toggle' => 'tab', href: '#tab-1'}
                  = t('form.plan.desc')
              %li
                %a{'data-toggle' => 'tab', href: '#tab-2'} Нововведения и план мероприятий
              %li
                %a{'data-toggle' => 'tab', href: '#tab-3'} Комментарии
    .clearfix
    .tab-content
      #tab-1.tab-pane.fade.in.active.popup-bottom-rounded
        .row
          .col-xs-7.col-sm-7.col-md-7.col-lg-7.description-left-col
            .description-block
              %span.description-title Коротко о проекте
              %p
                = simple_format(post.goal)
            .description-block
              %span.description-title Эссе по проекту. Пояснения и обоснования
              %p
                = post.content
          .col-xs-5.col-sm-5.col-md-5.col-lg-5.description-right-col
            .description-block
              %span.description-title Этапы проекта
              .stages-blocks
                - post.stages.each do |stage|
                  .description-stage
                    %span.desc-stage-date
                      -if stage.date_begin and stage.date_end
                        = "#{Russian::strftime(stage.date_begin, '%d %b %Y')} - #{Russian::strftime(stage.date_end, '%d %b %Y')}"
                    %span.desc-stage-name
                      = stage.name
