.wholePost
    = render 'users/user_post', :user => post_estimate.user
    .posts
        = render 'users/user_name', :user => post_estimate.user, :created_at => post_estimate.created_at

        =trim_string(post_estimate.content)
        = link_to 'подробнее',  plan_post_path(@project, post_estimate)

        -#- if signed_in? and not current_user==post_estimate.user
        %br
        - if signed_in?
            -if @project.status == 9
                .voteBar
                    -if admin?
                        Голосов -
                        %span.number=post_estimate.voted_users.count
                        %br
                    - if can_vote?(post_estimate.voted(current_user).size, @number_v, @votes)
                        %b=link_to 'отдать голос за этот проект', "/project/#{@project.id}/plan/vote/#{post_estimate.id}", :remote => true, :method => :put, class: "voteCounter"


            -if @project.status == 10
                = link_to 'Добавить оценку', '/project/'+@project.id.to_s+'/estimate/status/2/posts/new?plan_id='+post_estimate.id.to_s
= render post_estimate.estimates
