            =t('form.essay1')
        %li
          %a.text-success(href="#plan2" data-toggle="tab" style='font-size:10px; font-weight: bold;')
            =t('form.plan_first')
        -unless @post.post_aspects_first.nil?
          -@post.post_aspects_first.each do |cp|
            %li
              %a(href="#asp_#{cp.id}" data-toggle="tab")
