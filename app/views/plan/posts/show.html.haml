- if @plan_post.user == current_user and @plan_post.id == 0
  = link_to 'Редактировать', edit_plan_post_path(@plan_post)
  = link_to 'Отправить в архив', {:action => :destroy, :id => @plan_post.id}, :method => :delete, :confirm => 'Точно?'

- if @plan_post.status == 2 and expert?
  = link_to 'Принять', expert_acceptance_save_plan_post_path(@plan_post), :confirm => 'Точно?'
  |
  = link_to ' Отправить на доработку', expert_revision_plan_post_path(@plan_post)
  |
  = link_to ' Отклонить', expert_rejection_plan_post_path(@plan_post)

- if current_user?(@plan_post.user) and @plan_post.status == 0 #and @plan_post.created_at < 1.days.ago
  = link_to 'послать эксперту', to_expert_plan_post_path(@plan_post)
.wholePost
  = render 'users/user_post', :user => @plan_post.user
  .posts
    = render 'users/user_name', :user => @plan_post.user, :created_at => @plan_post.created_at
    %p
      %b Цели (образ желаемого будущего)
      %br= simple_format(@plan_post.goal)

    %b Список решаемых задач
    %br
    %br
    - @plan_post.task_triplets.each_with_index do |p, index|
      %b #{index+1} Задача:
      = simple_format(p.task)
      %br
      %b Ресурсы для #{index+1} задачи
      = simple_format(p.supply) 
      %br
      %b Cредства создания ресурсов для #{index+1} задачи        
      = simple_format(p.howto)
      =image_tag('dots.png')
      %br

      
    %p
      %b Первый шаг
      %br= simple_format(@plan_post.first_step)
    %p
      %b Дальнейшие шаги
      %br= simple_format(@plan_post.other_steps)

  

    .social 
      - if signed_in? and not  @plan_post.users.include?(current_user)
        =link_to "#{@plan_post.users.count}",  plus_plan_post_path(@plan_post), :id =>  @plan_post.id,:remote => true, :method => :put, class: "counter"
      -else
        = @plan_post.users.count
      =image_tag "like.png"
      =link_to  @plan_post.number_views,  @plan_post, class: "counter"
      =image_tag "views.png"
      =link_to  @plan_post.comments.count,  @plan_post, class: "counter"
      =image_tag "comment.png"

- unless @plan_post.post_notes.empty?
  .redtitle Переписка эксперта и автора 
  = render :partial => 'post_note', :collection => @plan_post.post_notes
  =image_tag('dots.png')



- if signed_in? and @plan_post.status == 0
  = render :partial => 'shared/comment_form', :locals => { :comment => @comment, :url_link => add_comment_plan_post_path(@plan_post.id)}

= render :partial => 'shared/comment',:collection => @plan_post.comments, :locals => { :path_link => '/plan/comments/'}
%br
%br
/ %br
/ - unless @plan_post.life_tape_post.nil?
/   .redtitle Идея, которой вдохновлена концепция
/   = render :partial => 'life_tape/posts/post', :object  => @plan_post.life_tape_post


