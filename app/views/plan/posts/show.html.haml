
.col-md-8
  .media
    .media-body
      %span.h5.text-success=t('form.essay')
      %span
        %a(href="#" style="text-decoration=none;")
          -#%i.glyphicon.glyphicon-pencil
      %br
      =@post.content

  %br
  %br
  %div.tab-content
