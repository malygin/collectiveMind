= form_for post, :url => {:project => @project.id,  :action => post.persisted? ? 'update' : 'create'}, remote: post.persisted? ? true : false do |f|
  = render 'shared/notice_messages', :object =>f.object
  =f.text_field :title, :class => 'form-control', placeholder: 'Введите название ...', id:'title-textfield'
  %br
  =f.select :aspect_id, options_for_select(@aspects.collect { |p| [p.content, p.id] }, post.aspect_id)
  %br
  =f.text_area :content, :class => 'wysihtml5 form-control', style: 'height: 500px;', placeholder: 'Введите текст ...', id:'some-textarea'
  %br
  .pull-right
    =f.submit 'Сохранить', :id  => "send_post", class: 'btn btn-lg btn-success'
  %br
  %br