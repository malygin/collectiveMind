-if boss?
  .pull-right
    =link_to new_knowbase_post_path(@project),id: 'new_knowbase_post' do
      %span.label.label-success=t('form.knowbase.new_post')
  %br
  %br
.text-success#sort_success(style='display:none;')
  =t('form.knowbase.sort_success')
.text-success#post_success(style='display:none;')
  =t('form.knowbase.post_success')
%ul.side-nav{id: "#{'sortable' if boss?}"}
  -unless @stages.nil?
    -@stages.each do |s|
      %li{class: "#{'ui-state-default' if boss?} #{'active' if s.id==params[:id].to_i or (s.id == @stages.min_stage_knowbase_post(@project.id).first.id and params[:id].nil?)}",stage:"#{s.stage}", id: "#{s.id}"}
        %a(href="/project/#{@project.id}/knowbase/posts/#{s.id}")
          %div{id: "knowbase_left_title_#{s.id}"}
            =s.title



