%div.well
  -if current_user.boss?
    .pull-right
      =link_to new_knowbase_post_path(@project),:remote => true,:id => "new_knowbase_post" do
        %span.label.label-success +добавить статью
    %br
    %br
  .text-success#sort_success(style='display:none;')
    Список успешно обновлен
  .text-success#post_success(style='display:none;')
    Статья успешно добавлена
  %ul.nav.nav-pills.nav-stacked{:id => "#{'sortable' if boss?}"}
    -@stages.each do |s|
      %li{class: "#{'ui-state-default' if boss?} #{'active' if s.stage==params[:id].to_i or (s.stage == @stages.min_stage_knowbase_post(@project.id).first.stage and params[:id].nil?)}",stage:"#{s.stage}", id: "#{s.id}"}
        %a(href="/project/#{@project.id}/knowbase/posts/#{s.stage}")
          %div{id: "knowbase_left_title_#{s.id}"}
            =s.title



