%span.h3{:id => "edit_knowbase_post_title_#{knowbase_post.id}"}
  =knowbase_post.title
  %i.fa.fa-question-circle.tooltips(data-toggle="tooltip" data-placement="bottom" title="Статьи очень важны!")
%span
  -if boss?
    =link_to edit_knowbase_post_path(@project,knowbase_post),:remote => true, :id => "edit_knowbase_post_#{knowbase_post.id}" do
      %span{:class=>"glyphicon glyphicon-pencil text-success", :style=>"cursor:pointer;text-decoration:none;font-size:15px;"}
    =link_to knowbase_post_path(@project,knowbase_post), :method => :delete, :confirm => 'Удалить статью?',:id => "destroy_knowbase_post_#{knowbase_post.id}" do
      %span{:class=>"glyphicon glyphicon-remove text-danger", :style=>"cursor:pointer;text-decoration:none;font-size:15px;"}
%br
%br
%div{:id => "edit_knowbase_post_content_#{knowbase_post.id}"}
  =knowbase_post.content.html_safe