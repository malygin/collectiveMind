.col-sm-6.vote_item_cont{id: "post_vote_#{post_vote.id}"}
  .vote_item.color_me(data-me-type="aspect" data-me-action="border-top-color" data-me-color="#{post_vote.id % 13}")
    .heading_cont
      %h6
        = post_vote.content
    .divider10
    .vote_controls.text-center
      -#= link_to vote_collect_info_post_path(@project, post_vote.id, status: 1), remote: true, method: :put, class: "#{'voted' if status == 1} vote_button v_btn_1", "data-icon-class" => "fa-exclamation", "data-vote-role" => "important", :role => "button" do
      %button.btn.vote_button.v_btn_1{data: {project: @project.id, id: post_vote.id, status: 1, stage: vote_collect_info_post_path(@project, post_vote.id, status: 1).split('/')[3]}, class: "#{'voted' if status == 1}", "data-icon-class" => "fa-exclamation", "data-vote-role" => "important", :role => "button",
      "data-placement" => "bottom", "data-toggle" => "tooltip", :title => "Отнести к необходимым"}

      -#= link_to vote_collect_info_post_path(@project, post_vote.id, status: 2), remote: true, method: :put, class: "#{'voted' if status == 2} vote_button v_btn_2", "data-icon-class" => "fa-check", "data-vote-role" => "not_important", :role => "button" do
      %button.btn.vote_button.v_btn_2{data: {project: @project.id, id: post_vote.id, status: 2, stage: vote_collect_info_post_path(@project, post_vote.id, status: 2).split('/')[3]}, class: "#{'voted' if status == 2}", "data-icon-class" => "fa-check", "data-vote-role" => "not_important", :role => "button",
      "data-placement" => "bottom", "data-toggle" => "tooltip", :title => "Отнести к важным"}

      -#= link_to vote_collect_info_post_path(@project, post_vote.id, status: 3), remote: true, method: :put, class: "#{'voted' if status == 3} vote_button v_btn_3", "data-icon-class" => "fa-minus", "data-vote-role" => "unnecessary", :role => "button" do
      %button.btn.vote_button.v_btn_3{data: {project: @project.id, id: post_vote.id, status: 3, stage: vote_collect_info_post_path(@project, post_vote.id, status: 3).split('/')[3]}, class: "#{'voted' if status == 3}", "data-icon-class" => "fa-minus", "data-vote-role" => "unnecessary", :role => "button",
      "data-placement" => "bottom", "data-toggle" => "tooltip", :title => "Отнести к неважным"}

    .divider15