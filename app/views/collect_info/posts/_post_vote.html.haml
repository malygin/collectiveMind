.col-sm-6.vote_item_cont{id: "post_vote_#{post_vote.id}"}
  .vote_item.color_me(data-me-type="aspect" data-me-action="border-top-color" data-me-color="#{post_vote.id % 13}")
    .heading_cont
      %h6
        = post_vote.content
    .divider10
    .vote_controls.text-center
      %button.btn.vote_button{data: {project: @project.id, id: post_vote.id, status: 1, stage: vote_collect_info_post_path(@project, post_vote.id, status: 1).split('/')[3]}, class: "#{'voted' if status == 1}", "data-icon-class" => "fa-exclamation", "data-vote-role" => "important", :role => "button",
      "data-placement" => "bottom", "data-toggle" => "tooltip", :title => "Отнести к необходимым"}
        %i.vote.vote-vote1
      %button.btn.vote_button{data: {project: @project.id, id: post_vote.id, status: 2, stage: vote_collect_info_post_path(@project, post_vote.id, status: 2).split('/')[3]}, class: "#{'voted' if status == 2}", "data-icon-class" => "fa-check", "data-vote-role" => "not_important", :role => "button",
      "data-placement" => "bottom", "data-toggle" => "tooltip", :title => "Отнести к важным"}
        %i.vote.vote-vote2
      %button.btn.vote_button{data: {project: @project.id, id: post_vote.id, status: 3, stage: vote_collect_info_post_path(@project, post_vote.id, status: 3).split('/')[3]}, class: "#{'voted' if status == 3}", "data-icon-class" => "fa-minus", "data-vote-role" => "unnecessary", :role => "button",
      "data-placement" => "bottom", "data-toggle" => "tooltip", :title => "Отнести к неважным"}
        %i.vote.vote-vote3
    .divider15