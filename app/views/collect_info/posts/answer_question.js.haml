$('[id^=answer_]').removeClass('btn-white btn-red btn-blue').addClass('btn-white');
-if @wrong_answer
  -#$('.wrong-answer').removeClass("close-notice");
  $('#hint_question_#{@question.id}').removeClass("close-notice");
  - @question.answers.by_status(0).by_uncorrect.each do |answer|
    $('#answer_#{answer.id}.active').removeClass('btn-white btn-red btn-blue').addClass('btn-red');
  $('button.answer-question').button('reset').removeClass("active");
-else
  -#$('.wrong-answer').addClass("close-notice");
  $('.hint').addClass("close-notice");
  - @question.answers.by_status(0).by_correct.each do |answer|
    $('#answer_#{answer.id}').removeClass('btn-white btn-red btn-blue').addClass('btn-blue');

  -if @next_question
    -#$("#question_#{@question.id}").animate({height: 0, opacity:0}, 1000, function() { $(this).remove(); });
    -#$("#question_#{@next_question.id}").fadeIn();
    $("#questionsCarousel_#{@aspect.id}").carousel('next');
    $("#question_count_#{@aspect.id}").html(parseInt($("#question_count_#{@aspect.id}").html())+1)

  -else
    -#$('#check_question_#{@aspect.id}').html('<i class="fa fa-check" style="font-size:15px;margin:0;"></i>');
    -#$('#progress-bar-main').css('width',"#{(@count_aspects_check/@count_aspects.to_f)*100}%");
    $('#knob-1').attr('data-end',"#{((@count_aspects_check/@count_aspects.to_f)*100).round}");
    init_first_stage_knob();
    -if @aspect == @project.main_aspects.last
      magnificPopupOpen('#popup-greetings-text');
    -else
      $('#li_aspect_#{@aspect.id}').removeClass('active');
      $('#li_aspect_#{@aspect.id} .slider-item').removeClass('active');
      $('#li_aspect_#{@aspect.id}').next().find('.slider-item').addClass('active');
      $('#li_aspect_#{@aspect.id}').next().find('a').tab('show');


  -#$('#count_questions_now_#{@aspect.id}').html("#{@count_now}");
  -#$('#progress_bar_#{@aspect.id}').css('width',"#{(@count_now/@count_all.to_f)*100}%");
  $('#knob-1').attr('data-end',"#{((@count_now/@count_all.to_f)*100).round}");
  init_first_stage_knob();
  $('button.answer-question').button('reset').removeClass("active");

