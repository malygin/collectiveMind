#popup-1-1.popup-window.detailed_popup.popup-w835.mfp-hide
  .popup.popup_rounded.popup_color_theme_stage2
    .modal_title.color_me{style: "border-top-color:#{post_short.color}", "data-me-action" => "border-top-color", "data-me-color" => "0", "data-me-type" => "aspect"}
      .row
        .col-md-9
          %h4.bold.font_dark_grey
            =post_short.content
        .col-md-3
          .row
            .col-md-12
              .text-right.post_likes
                %span.bold
                  =post_short.comments.count
                  %i.fa.fa-comment-o.theme_font_color
                %span.bold
                  =post_short.users_pro.count
                  %i.fa.fa-thumbs-o-up.theme_font_color
                %span.bold
                  =post_short.users_against.count
                  %i.fa.fa-thumbs-o-down.theme_font_color
                %small
                  =Russian::strftime(post_short.created_at,'%d.%m.%Y')
    .modal_body
      .media
        .media-left.text-center.gradient.post-poster
          = image_tag 'no-ava.png', class: 'img-circle img50'
          %p.poster-name
            =post_short.user
        .media-body.white
          .post-text
            %p
              %span.badge.badge_type1.color_me{"data-me-action" => "background", "data-me-color" => "0", "data-me-type" => "aspect"} Обоснование
            %p
              =post_short.short_desc
      .container.modal_content
        .row
          .col-md-12
            .divider20
            #myCarousel.carousel.slide{"data-ride" => "carousel"}
              .carousel-inner.chat-messages{:role => "listbox"}
                -if @comments.present?
                  - @comments.each_slice(5).with_index do |slice, i|
                    .item{class: "#{'active' if i + 1 == @comments.count / 5 + (@comments.count % 5 == 0 ? 0 : 1)}"}
                      = render partial:'shared/comment', collection: slice
                -else
                  .item.active
            .divider15
            = render partial:'shared/comment_form', locals:{ comment: @comment, post: @post, url_link: url_for(controller: @post.class.name.underscore.pluralize, action:'add_comment') }
            -if @comments.count > 5
              %nav.text-center
                %ul.pagination
                  - @comments.each_slice(5).with_index do |slice, i|
                    %li
                      %a.myCarousel-target{class: "#{'active' if i + 1 == @comments.count / 5 + (@comments.count % 5 == 0 ? 0 : 1)}", "data-slide-to" => "#{i}", "data-target" => "#myCarousel"}
                        ="#{i+1}"
        .divider25