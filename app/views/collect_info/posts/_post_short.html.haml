.post.post_type_1.ch_action{"data-for" => "post_ch#{post_short.id}"}
  .post-header.color_me{style: "background-color:#{post_short.color}", "data-me-action" => "background-color", "data-me-color" => "0", "data-me-type" => "aspect"}
  .post-body
    .media
      .media-left.text-center.gradient.post-poster
        = image_tag 'no-ava.png', class: 'img-circle img40'
        %p.poster-name
          =post_short.user
      .media-body.white
        = link_to({controller: 'core/aspect/posts', action: :show, project: @project.id, id: post_short.id}, remote: true, id: "show_record_#{post_short.id}") do
          .post-text.open-popup{"data-placement" => "1", "data-target" => "1"}
            =post_short.content
            %i.fa.fa-angle-right
        .post_comments_cont
          .post_cont_hover.white{id: "post_ch#{post_short.id}"}
            .wrapper.ps_cont.half_wheel_speed
              .post_cont_inner
                -post_short.comments.each do |comment|
                  .comment_preview
                    %span.bold
                      ="#{comment.user}:"
                    =comment.content
  .post-bottom.text-right.small_icons
    %span.popup2.comments_icon{"data-for" => "post_ch#{post_short.id}"}
      %small
        =post_short.comments.count
      %i.fa.fa-comment-o
    %span.popup2
      %small
        =post_short.users_pro.count
      %i.fa.fa-thumbs-o-up.fa-flip-horizontal
    %span.popup2
      %small
        =post_short.users_against.count
      %i.fa.fa-thumbs-o-down.fa-flip-horizontal