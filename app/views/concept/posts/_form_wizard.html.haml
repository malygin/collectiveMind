-#.content.container
-#  .row
-#    .col-md-12
-#      %h2.page-title
-#        Form Wizard
-#        %small Form validation
#modal_fast_discussion_concepts.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :style => "display: none;", :tabindex => "-1"}
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
        %h3#myModalLabel.modal-title Быстрая работа с нововведениями
      .modal-body
        #option_for_select_discontent{project: "#{@project.id}"}
        - check = get_check_field?('fast_discussion_concepts')
        #wizard.form-wizard
          %ul.wizard-navigation.nav-justified
            -unless check
              %li
                %a{"data-toggle" => "tab", :href => "#tab1"}
                  %small 1.
                  %strong Правила
            %li
              %a{"data-toggle" => "tab", :href => "#tab2"}
                %small
                  -if check
                    1.
                  -else
                    2.
                %strong Обзор
            %li
              %a{"data-toggle" => "tab", :href => "#tab3"}
                %small
                  -if check
                    2.
                  -else
                    3.
                %strong Добавить

          #bar.progress.progress-small
            .progress-bar
          .tab-content
            -#-unless check
            #tab1.tab-pane
              .form-horizontal
                %fieldset
                  %br
                  %h4
                    %p Эта стадия посвящена нововведениям, корректирующим несовершенства, выявленные на предыдущей стадии.
                    %p Любой участник может предложить для всеобщего обсуждения свою картину нововведений, функционирующих в будущем.
                    %p Для этого автору надо включить воображаемую машину времени и мысленно перенестись в недалекое будущее, где внедренные нововведения скорректировали актуальные несовершенства.
                    %p «Вернувшись из будущего», автор должен описать то, что он там «увидел», по представленному шаблону.

                  .control-group
                    %label.checkbox{:for => "notview"}
                      %input{:name => "notview", :type => "checkbox", :id => "notview", :onchange => "user_check_field(this,'fast_discussion_concepts');"}/
                      Не показывать в следующий раз

            #tab2.tab-pane
              .form-horizontal
                %fieldset
                  #form_fast_discussion_comment_concept


            #tab3.tab-pane
              .form-horizontal
                %fieldset
                  #form_fast_discussion_add_concept


            .description
              %ul.pager.wizard
                %li.previous
                  %button.btn.btn-primary.pull-left
                    %i.fa.fa-caret-left
                    Назад
                %li.next
                  %button.btn.btn-primary.pull-right
                    Далее
                    %i.fa.fa-caret-right

      .modal-footer
        %button.btn.btn-default(type = "button" data-dismiss="modal") Закрыть