%h4
  =t('show.concept.title')
  =number

%h5.text-center
  %b=post_for_vote.title


.text-center
  %span.h5(class="#{class_for_concept_type_field(post_for_vote.concept_post,1)}" id="name")=t('form.concept.novation_what')
%br
=simple_format(post_for_vote.name)


