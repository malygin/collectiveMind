.text-center
  %span.h5(class="#{class_for_concept_type_field(post_for_vote.concept_post,4)}" id="positive_r")=t('form.concept.cond_res')
%br
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th
        ="#"
      %th
        =t('show.concept.name_res')
      %th
        =t('show.concept.desc_res')
  %tbody
    - post_for_vote.concept_post.concept_post_resources.by_type('positive_r').each_with_index  do |r, index|
      %tr
        %td
          =index+1
        %td
          =r.name
        %td
          =r.desc
        - r.concept_post_resources.by_type('positive_s').each_with_index  do |res, ind|
          %tr
            %td
              ="#{index+1}.#{ind+1}"
            %td
              =res.name
