$('#note_for_post_#{@post.id}_#{@type}').remove();

$('#note_form_#{@type}').append(
'<div id="post_note_#{@post_note.id}"><a id="destroy_post_note_#{@post_note.id}" rel="nofollow" data-remote="true" data-method="put" data-confirm="Удалить замечание?" href="/project/#{@project.id}/concept/posts/#{@post.id}/destroy_note?note_id=#{@post_note.id}&type_field=#{@type.to_i}">'+
'<span class="glyphicon glyphicon-remove text-danger pull-right" style="cursor:pointer;text-decoration:none;font-size:15px;"></span></a>'+
'<li id="li_note_#{@post_note.id}">#{@post_note.content}</li></div>' );

$('#note_form_#{@type}').addClass('border_note');
-if @post.send(column_for_concept_type(@type.to_i)) == false
  $("##{id_for_concept_type(@type.to_i)}").removeClass('text-info text-success').addClass('text-danger');

$('#btn_note_#{@type}').removeClass('disabled');
$('#post_note_#{@post_note.id}').effect("highlight", {color: '#f5cecd'}, 1000);