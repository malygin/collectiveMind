.col-sm-4.vote_item_cont.item_expandable.h_2{id: "post_vote_#{post_vote.id}"}
  .vote_item.themes_cont
    .heading_cont.blackonwhite
      %h6
        =post_vote.title
    %p
      =post_vote.content

    .post-theme{id: "stripe-p-#{post_vote.id}"}
      %small.pull-left Несовершенства
      - post_vote.concept_disposts.each_with_index do |post, index|
        %span.tag-stripes{class: "#{'active' if index == 0} color-N#{index + 1}"}
          %span.tags
            = trim_content(post_vote.content, 30)

    .divider15
    .vote_controls.text-center
      = link_to vote_concept_post_path(@project, post_vote.id, status: 1), remote: true, method: :put do
        %button.btn.vote_button.v_b_text.v_btn_1{"data-vote-role" => "vote_yes", :role => "button"} Да
      = link_to vote_concept_post_path(@project, post_vote.id, status: 2), remote: true, method: :put do
        %button.btn.vote_button.v_b_text.v_btn_3{"data-vote-role" => "vote_no", :role => "button"} Нет
      %span.vote_open_detail.grey
        %i.fa.fa-angle-right.font_white
      .divider15