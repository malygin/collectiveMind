.container
  .row
    .col-md-6
      %h5 Идеи
      .divider_1_grey.margin_right_25
      .cab_cont_h450
        %ul.list-unstyled.ps_cont.vote_concepts{:role => "tablist"}
          .divider15
          - @user_voter.content_for_vote(@project, status).each do |post_vote|
            %li.vote_item_cont{:role => "presentation", id: "post_vote_#{post_vote.id}" }
              %a.big_tab.a_font_reset.rounded_3.border_grey.lighter-grey{"data-toggle" => "tab", :href => "#desript_#{post_vote.id}", :role => "tab"}
                = post_vote.title
                .vote_controls.text-center
                  - @project.vote_folders.each do |num_folder, folder|
                    - if num_folder > 0
                      %button.btn.b_vote.vote_button{data: {project: @project.id, id: post_vote.id, status: num_folder, stage: @project.current_stage_title}, class: "#{'voted ' if status == num_folder}v_btn_#{num_folder+1}",
                      "data-icon-class" => "fa-check", "data-vote-role" => "#{status == num_folder ? 'all' : folder[:role]}", "data-vote-default-role" => "#{folder[:role]}", :role => "button",
                      'data-placement' => 'bottom', 'data-toggle' => 'tooltip', title: t("vote.#{@project.current_stage_type}.#{folder[:role]}.title_button").html_safe}

          .divider10
    .col-md-6.tab-content.vote_desc_concepts
      %h5 Описание
      .divider_1_grey.margin_right_25
      - @user_voter.content_for_vote(@project, status).each do |post_vote|
        .tab-pane.fade.in{id:"desript_#{post_vote.id}"}
          .cab_cont_h450
            .ps_cont
              .divider15
              .stripe-qa
                .lined-heading.back_color_stage3_superpale
                  %span.bold-stripe Суть идеи, что и как будет изменено?
                %p
                  = post_vote.goal
              .stripe-qa
                .lined-heading.back_color_stage3_superpale
                  %span.bold-stripe Кто будет действовать иначе после реализации идеи?
                %p
                  = post_vote.actors
              .stripe-qa
                .lined-heading.back_color_stage3_superpale
                  %span.bold-stripe Чьи интересы будут затронуты?
                %p
                  = post_vote.impact_env
              .divider10



