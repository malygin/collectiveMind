.col-sm-4.vote_item_cont.item_expandable.h_2
  .vote_item
    .heading_cont.blackonwhite
      %h6
        =post_vote.title
    %p
      =post_vote.name

    .post-theme{id: "stripe-p-#{post_vote_counter}"}
      %small.pull-left Несовершенства
      - post_vote.concept_disposts.each_with_index do |post, index|
        %a.tag-stripes{id: "stripe-p-#{index+1}", href: "#", class: "#{'active' if index == 0} color-N#{index + 1}"}
          %span.tags
            = trim_content(post_vote.content, 30)

    .divider15
    .vote_controls.text-center
      %button.btn.vote_button.v_b_text.v_btn_1{"data-vote-role" => "vote_yes", :role => "button"} Да
      %button.btn.vote_button.v_b_text.v_btn_3{"data-vote-role" => "vote_no", :role => "button"} Нет
      %span.vote_open_detail.grey
        %i.fa.fa-angle-right.font_white
      .divider15