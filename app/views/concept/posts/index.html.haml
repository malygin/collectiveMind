.innov
  %h4
    = t('show.concept.title_plural')
    %span.innov-header-smaller
      = @project.concept_ongoing_post.count
    %i.fa.fa-question-circle
  .container
    .row.innovs#tab_concept_posts
      = link_to 'Добавить нововведение', project_user_path(@project, current_user), class: 'btn btn-success'
      %br
      %br
      - @project.concept_ongoing_post.order('concept_posts.id').each_with_index do |pa, index1|
        .col-lg-6.box-shadow-outer.concept-block{id: "concept_post_#{pa.id}", class: "#{post_discontent_classes(pa)}"}
          .innov-single.box-shadow-1.rounded-3
            .row.post-header
              .col-xs-10
                %span.post-header-text.color.mass-red
                  %i.fa.fa-check-circle.color.mass-red
                  = trim_content(pa.title)
              .col-xs-2.post-header-date
                %span
                  = Russian::strftime(pa.created_at, '%d.%m.%Y')
            .post-center-block
              .post-poster
                -#@todo Пофиксить аватарку!
                /= image_tag pa.user.avatar.url(:thumb)
                = image_tag 'no-ava.png'
                .clearfix
                %span.poster-name
                  = pa.user.to_s
              = link_to({action: :show, project: @project, id: pa.id, asp: params[:asp]}, remote: true, id: 'show_record', class: 'post-text') do
                .text-arrow.pull-right
                %span
                  = trim_string(pa.name)
            .post-themes{id: "stripe#{index1+1}"}
              - if pa.concept_disposts.any?
                - pa.concept_disposts.each_with_index do |cd, index2|
                  %a.tag-stripe{id: "stripe#{index2 + 1}", class: "#{'active' if index2 == 0} color-N#{index2 + 1}", href: '#'}
                    %span.tag
                      = trim_content(cd.content, 50)

#render_concept_post

