- if shown_intro('concept_intro') == ''
  = render partial: 'popup_welcome'
- if @user_voter
  = render partial: 'popup_vote'
- if @project_result
  = render partial: 'popup_results'
.stage-info-sort-block
  .row
    %br/
    .col-md-7
      %span.stage-heading
        Идеи
        %span#count_concepts
          ="(#{@posts.count})"
    .col-md-5
      .pull-right
        - if @project.stage == '3:0' or @project.status == 100
          = link_to new_concept_post_path(@project, type_mechanic: 'simple'), id: 'new_concept_posts' do
            %button.btn.add-button{"data-placement" => "bottom", "data-toggle" => "tooltip", :title => "Добавить идею"}
              %span.tooltip1.middle{data: {name: 'sort', desc: 0, type: 'comment'},'data-placement' => 'bottom','data-toggle' => 'tooltip','data-trigger'=>'manual', title:'Добавляйте новые идеи, связанные с текущей проблемной ситуацией'}
                = t('techniques.concept_posts_simple')
        - else
          -#= link_to({action: :show_results, project: @project.id}, remote: true, id: "show_results") do
          -#  .results{class: "#{show_results?('results_'+name_controller.to_s) ? 'results_blue' : 'results_red'}","data-placement" => "bottom", "data-toggle" => "tooltip", :title => "Показать итоги стадии"}

      .sort-block.pull-right
        %span.sort-label Сортировать по новым:
        %span#sorter{data: {visit: last_time_visit_page('concept')}}
          %span.sort-1.sort_btn.sprite.sprite-1_3.sort-comment{data: {name: 'sort', desc: 0, type: 'comment'},'data-placement' => 'bottom','data-toggle' => 'tooltip', title:'Сортировать по новым комментариям'}
            - new_comments = @project.concept_ongoing_post.after_last_visit_comments(last_time_visit_page('concept')).size
            - if new_comments > 0
              %span.badge-red
                = new_comments
          %span.sort-2.sort_btn.sprite.sprite-2_3.sort-date.active{data: {name: 'sort', desc: 0, type: 'date'}, "data-placement" => "bottom", "data-toggle" => "tooltip", :title => "Сортировать по новым идеям"}
            - new_posts = @project.concept_ongoing_post.after_last_visit_posts(last_time_visit_page('concept')).size
            - if new_posts > 0
              %span.badge-red
                = new_posts


.stage-post-block
  .row#tab_dispost_concepts.tooltip1{"data-placement" => "top", "data-toggle" => "tooltip", "data-trigger"=>'manual', :title => "Знакомьтесь с предложениями других участников, комментируйте и развивайте их идеи"}
    -#= render partial: 'post_short', collection: @posts





